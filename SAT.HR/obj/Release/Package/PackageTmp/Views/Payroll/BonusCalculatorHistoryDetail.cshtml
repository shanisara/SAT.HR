@model SAT.HR.Models.BonusCalculatorViewModel
@{
    ViewBag.Title = "BonusCalculatorHistoryDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">local_atm</i>
                    </div>
                    <h4 class="card-title">
                        <span> ประวัติการคำนวณโบนัส </span>
                        <span class="text-primary"></span>
                        <button type="button" class="btn btn-round pull-right btn-back">ย้อนกลับ</button>
                    </h4>
                </div>
                <div class="card-body">
                    <div>
                        <form class="form-horizontal">
                            <div class="row">
                                <label class="col-sm-2 col-form-label">ปีบัญชี</label>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        @Html.DisplayFor(m => m.Year, new { @class = "form-control" })
                                    </div>
                                </div>
                                <label class="col-sm-2 col-form-label">อัตรา(เท่า)</label>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        @Html.DisplayFor(m => m.Rate, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label class="col-sm-2 col-form-label">คำสั่ง</label>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        @Html.DisplayFor(m => m.BookCmd, new { @class = "form-control" })
                                    </div>
                                </div>
                                <label class="col-sm-2 col-form-label">วันที่เริ่ม</label>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        @if (Model.DateCmd.HasValue)
                                        {
                                            @Model.DateCmd.Value.ToString("MM/dd/yyyy")
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label class="col-sm-2 col-form-label">ไฟล์แนบ</label>
                                <div class="col-sm-10">
                                    <div class="input-group-prepend file-path">
                                        <a class="m-t-10 file-name" target="_blank" href=@Url.Action("DownloadFileBonusCalculator", "Payroll", new { id = Model.HeaderID })>@Model.PathFile</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="m-t-20">
                        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                            <thead class="text-primary">
                                <tr>
                                    <th style="width:60px;text-align:center;">ลำดับ</th>
                                    <th style="width:90px;text-align:center;">ปีบัญชี</th>
                                    <th style="width:400px">ชื่อ นามสกุล</th>
                                    <th style="width:120px;text-align:center;">เงินเดือน</th>
                                    <th style="width:80px;text-align:center;">อัตรา</th>
                                    <th style="width:100px;text-align:center;">โบนัส</th>
                                    <th style="width:100px;text-align:center;">m10</th>
                                    <th style="width:100px;text-align:center;">m11</th>
                                    <th style="width:100px;text-align:center;">m12</th>
                                    <th style="width:100px;text-align:center;">m1</th>
                                    <th style="width:100px;text-align:center;">m2</th>
                                    <th style="width:100px;text-align:center;">m3</th>
                                    <th style="width:100px;text-align:center;">m4</th>
                                    <th style="width:100px;text-align:center;">m5</th>
                                    <th style="width:100px;text-align:center;">m6</th>
                                    <th style="width:100px;text-align:center;">m7</th>
                                    <th style="width:100px;text-align:center;">m8</th>
                                    <th style="width:100px;text-align:center;">m9</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Step2 != null)
                                {
                                    int index = 1;
                                    for (int i = 0; i < Model.Step2.Count; i++)
                                    {
                                <tr>
                                    <td>@index</td>
                                    <td>@Model.Step2[i].Year</td>
                                    <td>@Model.Step2[i].FullNameTh</td>
                                    <td>@Model.Step2[i].Salary</td>
                                    <td>@Model.Step2[i].UpStep</td>
                                    <td>@Model.Step2[i].Bonus</td>
                                    <td>@Model.Step2[i].M10</td>
                                    <td>@Model.Step2[i].M11</td>
                                    <td>@Model.Step2[i].M12</td>
                                    <td>@Model.Step2[i].M1</td>
                                    <td>@Model.Step2[i].M2</td>
                                    <td>@Model.Step2[i].M3</td>
                                    <td>@Model.Step2[i].M4</td>
                                    <td>@Model.Step2[i].M5</td>
                                    <td>@Model.Step2[i].M6</td>
                                    <td>@Model.Step2[i].M7</td>
                                    <td>@Model.Step2[i].M8</td>
                                    <td>@Model.Step2[i].M9</td>
                                </tr>
                                        index++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row m-b-30">
                    <div class="ml-auto mr-auto">
                        <button type="button" class="btn btn-back">ย้อนกลับ</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    table {
        display: block;
        table-layout: fixed;
        white-space: nowrap;
        overflow-x: auto;
        height: 410px;
    }
    /*tbody {
        display: block;
        height: 428px;
        overflow-y: scroll;
    }*/
</style>


@section Scripts {
    <script>
        $(document).ready(function () {
            $(".btn-back").click(function () {
                var url = '@Url.Action("BonusCalculatorHistory", "Payroll")';
                window.location.href = url;
            });
        });
    </script>
}