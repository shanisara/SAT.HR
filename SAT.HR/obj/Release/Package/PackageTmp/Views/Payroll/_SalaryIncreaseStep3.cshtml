@model SAT.HR.Models.SalaryIncreaseProcessViewModel

<div class="card">
    <div class="card-header">
        <h4 class="card-title"><span>ยืนยันการปรับขั้นเงินเดือน</span></h4>
        <p class="card-category text-danger">
            ระบบจะทำการนำข้อมูลเงินเดือนพนักงานจากขั้นตอนที่ 2 เข้าสู่ฐานข้อมูลพนักงานจริง <br />ก่อนนำข้อมูลเข้ากรุณาตรวจสอบข้อมูลในขั้นตอนที่ 2 (ตรวจสอบจาก Exel) ให้ถูกต้องก่อนทำรายการในขั้นตอนนี้
        </p>
    </div>
    <div class="row justify-content-center">
        <div class="col-sm-7 m-b-30">
            <div class="row">
                <label class="col-sm-2 col-form-label m-t-15">คำสั่ง</label>
                <div class="col-sm-10">
                    <div class="form-group bmd-form-group">
                        @Html.TextBoxFor(m => m.BookCmd, new { @class = "form-control", required = "true" })
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label m-t-15">วันที่ลงคำสั่ง</label>
                <div class="col-sm-4">
                    <div class="form-group bmd-form-group">
                        @Html.TextBoxFor(m => m.DateCmd, "{0:dd-MM-yyyy}", new { @class = "form-control datepicker", required = "true" })
                    </div>
                </div>
                <label class="col-sm-2 col-form-label m-t-15">วันที่มีผล</label>
                <div class="col-sm-4">
                    <div class="form-group bmd-form-group">
                        @Html.TextBoxFor(m => m.DateEff, "{0:dd-MM-yyyy}", new { @class = "form-control datepicker", required = "true" })
                    </div>
                </div>
            </div>
            <div class="row">
                <label class="col-sm-2 col-form-label m-t-15">ไฟล์แนบ</label>
                <div class="col-sm-10">
                    <div class="input-group-prepend file-path">
                        <a class="btn btn-link btn-danger btn-just-icon file-delete" file-delete href="#" title="ลบ" style="margin-top:0px"><i class="material-icons">delete_forever</i></a>
                    </div>
                    <input id="FileUpload" name="FileUpload" type="file" class="form-control file-upload">
                </div>
            </div>
        </div>
    </div>
</div>
