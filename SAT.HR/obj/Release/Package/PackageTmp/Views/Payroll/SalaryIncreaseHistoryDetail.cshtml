@model SAT.HR.Models.SalaryIncreaseViewModel
@{
    ViewBag.Title = "SalaryIncreaseHistoryDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">local_atm</i>
                    </div>
                    <h4 class="card-title">
                        <span> ประวัติการเลื่อนขั้นเงินเดือน </span>
                        <span class="text-primary"></span>
                        <button type="button" class="btn btn-round pull-right btn-back">ย้อนกลับ</button>
                    </h4>
                </div>
                <div class="card-body">
                    <div>
                        <form class="form-horizontal">
                            <div class="row">
                                <label class="col-sm-2 col-form-label">ปีบัญชี</label>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        @Html.DisplayFor(m => m.Year, new { @class = "form-control" })
                                    </div>
                                </div>
                                <label class="col-sm-1 col-form-label">ระดับ</label>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        @(Model.UpLevel == 1 ? "1 ถึง 8" : "9 ถึง 10")
                                    </div>
                                </div>
                                <label class="col-sm-1 col-form-label">ขั้นที่ปรับขึ้น</label>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        @(Model.UpLevel == 0.5 ? "0.5 ขั้น" : " 1 ขั้น")
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label class="col-sm-2 col-form-label">คำสั่ง</label>
                                <div class="col-sm-4">
                                    <div class="form-group">
                                        @Html.DisplayFor(m => m.BookCmd, new { @class = "form-control" })
                                    </div>
                                </div>
                                <label class="col-sm-1 col-form-label">วันที่เริ่ม</label>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        @if (Model.DateCmd.HasValue)
                                        {
                                            @Model.DateCmd.Value.ToString("MM/dd/yyyy")
                                        }
                                    </div>
                                </div>
                                <label class="col-sm-1 col-form-label">วันที่ลงคำสั่ง</label>
                                <div class="col-sm-2">
                                    <div class="form-group">
                                        @if (Model.DateEff.HasValue)
                                        {
                                            @Model.DateEff.Value.ToString("MM/dd/yyyy")
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <label class="col-sm-2 col-form-label">ไฟล์แนบ</label>
                                <div class="col-sm-10">
                                    <div class="input-group-prepend file-path">
                                        <a class="m-t-10 file-name" target="_blank" href=@Url.Action("DownloadFileSalaryIncrease", "Payroll", new { id = Model.HeaderID })>@Model.PathFile</a>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="m-t-20">
                        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                            <thead class="text-primary">
                                <tr>
                                    <th style="width:6%; text-align:left;">ลำดับ</th>
                                    <th style="width:7%; text-align:left;">ปีบัญชี</th>
                                    <th style="width:7%; text-align:left;">รอบที่</th>
                                    <th style="width:32%; text-align:left;">ชื่อ นามสกุล</th>
                                    <th style="width:7%; text-align:left;">อัตรา</th>
                                    <th style="width:7%; text-align:right;">ระดับ</th>
                                    <th style="width:7%; text-align:right;">ขั้นเก่า</th>
                                    <th style="width:7%; text-align:right;">ขั้นใหม่</th>
                                    <th style="width:12%;text-align:right;">เงินเดือนเก่า</th>
                                    <th style="width:15%;text-align:right;">เงินเดือนใหม่</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Step2 != null)
                                {
                                    int index = 1;
                                    for (int i = 0; i < Model.Step2.Count; i++)
                                    {
                                        <tr>
                                            <td>@index</td>
                                            <td>@Model.Step2[i].Year</td>
                                            <td>@Model.Step2[i].Seq</td>
                                            <td>@Model.Step2[i].FullNameTh</td>
                                            <td>@Model.Step2[i].UpStep</td>
                                            <td style="text-align:right">@Model.Step2[i].Old_Level</td>
                                            <td style="text-align:right">@Model.Step2[i].Old_Step</td>
                                            <td style="text-align:right">@Model.Step2[i].New_Step</td>
                                            <td style="text-align:right">@Model.Step2[i].Old_Salary</td>
                                            <td style="text-align:right">@Model.Step2[i].New_Salary</td>
                                        </tr>
                                        index++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row m-b-30">
                    <div class="ml-auto mr-auto">
                        <button type="button" class="btn btn-back">ย้อนกลับ</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>

    table {
        display: block;
        table-layout: fixed;
        white-space: nowrap;
        overflow-x: auto;
        height: 405px;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(".btn-back").click(function () {
                var url = '@Url.Action("SalaryIncreaseHistory", "Payroll")';
                window.location.href = url;
            });
        });
    </script>
}