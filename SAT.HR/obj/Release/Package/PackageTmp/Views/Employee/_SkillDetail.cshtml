@model SAT.HR.Models.UserSkillViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-skill" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserID)
    @Html.HiddenFor(m => m.UskID)

    <div class="form-horizontal">
        <div class="row occupation">
            <label class="col-sm-2 col-form-label" for="NewLastNameTh">ภาษา:<span class="text-danger"> *</span> </label>
            <div class="col-sm-4">
                @Html.DropDownListFor(n => n.LID, new SelectList((IEnumerable<SelectListItem>)ViewBag.Language, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "selectpicker", data_style = "select-with-transition", required = "true" })
            </div>
            <label class="col-sm-1 col-form-label">ระบุ</label>
            <div class="col-sm-4">
                @Html.TextBoxFor(m => m.LIOther, new { @class = "form-control" })
            </div>
        </div>
        <div class="row occupation">
            <label class="col-sm-2 col-form-label" for="NewLastNameTh">ประเภท:</label>
            <div class="col-sm-9 m-t-10">
                @Html.DropDownListFor(n => n.LkTID, new SelectList((IEnumerable<SelectListItem>)ViewBag.LanguageSkillType, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "selectpicker", data_style = "select-with-transition" })
            </div>
        </div>
        <div class="row occupation">
            <label class="col-sm-2 col-form-label" for="NewLastNameTh">ระดับ:<span class="text-danger"> *</span> </label>
            <div class="col-sm-9 m-t-10">
                @Html.DropDownListFor(n => n.LkID, new SelectList((IEnumerable<SelectListItem>)ViewBag.LanguageSkill, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "selectpicker", data_style = "select-with-transition", required = "true" })
            </div>
        </div>
        <div class="row">
            <label class="col-sm-2 col-form-label">คะแนน</label>
            <div class="col-sm-9 m-t-10">
                @Html.TextBoxFor(m => m.Score, new { @class = "form-control", type = "number"})
            </div>
        </div>
    </div>
}

<script>
    //$(".form-certificate").validate({
    //    errorPlacement: $.noop
    //});

    if ('@Model.UskID' == '0') {
        $('#LIOther').prop("disabled", true);
    }
    else {
        if ('@Model.LID' != '99') {
            $('#LIOther').prop("disabled", true);
        }
    }

    $('.selectpicker').selectpicker();

    $('#LID').change(function () {
        if ($('#LID').val() != '99') {
            $('#LIOther').val('');
            $('#LIOther').prop("disabled", true);
        }
        else {
            $('#LIOther').prop("disabled", false);
        }
    });


</script>