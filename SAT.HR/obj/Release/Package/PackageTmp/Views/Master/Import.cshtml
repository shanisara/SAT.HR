
@{
    ViewBag.Title = "Import";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">assignment</i>
                        </div>
                        <h4 class="card-title"><span>นำข้อมูลเข้า</span></h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <label class="col-sm-2 col-form-label">ระบบ:</label>
                            <div class="col-sm-3">
                                <div class="form-group bmd-form-group">
                                    @Html.DropDownList("Subject", new SelectList((IEnumerable<SelectListItem>)ViewBag.Subject, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "selectpicker usertype", data_style = "select-with-transition" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-sm-2 col-form-label">ข้อมูล:</label>
                            <div class="col-sm-3">
                                <div class="form-group bmd-form-group">
                                    @Html.DropDownList("SubSubject", new SelectList((IEnumerable<SelectListItem>)ViewBag.SubSubject, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "selectpicker usertype", data_style = "select-with-transition" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <label class="col-sm-2 col-form-label">ไฟล์:</label>
                            <div class="col-sm-3">
                                <input type="file" id="fileExcelUpload" name="fileExcelUpload" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" />
                            </div>
                        </div>

                        <div class="row m-t-40">
                            <div class="ml-auto mr-auto">
                                <button type="button" class="btn btn-primary btn-save" id="btn-save">ตกลง</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        $(document).ready(function () {

            $('.selectpicker').selectpicker();

            $("#Subject").change(function () {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("GetSubTitle", "Master")',
                    data: { id: $("#Subject").val() },
                    dataType: 'json',
                    success: function (res) {
                        $("#SubSubject").empty().append('<option value=""> -- กรุณาเลือก -- </option>');
                        $.each(res, function (key, entry) {
                            $("#SubSubject").append($('<option>', { value: entry.Value, text: entry.Text, selected: entry.Selected }));
                        });
                        $("#SubSubject").selectpicker('refresh');
                    }
                });
            });

            $('#btn-save').click(function () {
                var _validFileExtensions = [".xls", ".xlsx"];
                var sFileName = $('#fileExcelUpload').val();
                var blnValid = false;
                var formData = new FormData($('#fileExcelUpload')[0]);
                debugger;
                for (var j = 0; j < _validFileExtensions.length; j++) {
                    var sCurExtension = _validFileExtensions[j];
                    if (sFileName.substr(sFileName.length - sCurExtension.length, sCurExtension.length).toLowerCase() == sCurExtension.toLowerCase()) {
                        blnValid = true;
                        break;
                    }
                }

                if (!blnValid) {
                    swal({
                        title: '',
                        text: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.ExcelError)',
                        type: "warning",
                        showCancelButton: false,
                        confirmButtonClass: 'btn btn-success btn-w-m btn-lg',
                        confirmButtonText: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)",
                        closeOnConfirm: false,
                        allowOutsideClick: false,
                        buttonsStyling: false
                    }).then(function () {

                    });
                }
                else {
                    var formData = new FormData();
                    formData.append('modelMapping', $("#SubSubject").val());
                    // Attach file
                    formData.append('FileUpload', $('input[type=file]')[0].files[0]);
                    debugger;
                    $.ajax({
                        url: '@Url.Action("UploadExcel", "ExcelImport")',
                        type: "POST",
                        data: formData,
                        enctype: 'multipart/form-data',
                        cache: false,
                        contentType: false,
                        processData: false,
                        success: function (data) {

                            if (data.messegecode == "0001") {
                                swal({
                                    title: "",
                                    text: data.messagetext,
                                    type: "warning",
                                    showCancelButton: false,
                                    confirmButtonClass: 'btn btn-success btn-w-m btn-lg',
                                    confirmButtonText: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)",
                                    closeOnConfirm: false,
                                    allowOutsideClick: false,
                                    buttonsStyling: false
                                }).then(function () {

                                });
                            }
                            else {
                                swal({
                                    title: "",
                                    text: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.SaveSucceed)",
                                    type: "success",
                                    buttonsStyling: false,
                                    confirmButtonClass: "btn btn-success",
                                    confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                                })
                            }
                        }
                    });
                }

            });
        });
    </script>
}
