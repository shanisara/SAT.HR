@model SAT.HR.Models.BenefitTypeViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formDetail" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.BenTID)

    <div class="col-md-12">
        <div class="row">
            @Html.Label("ประเภทสวัสดิการ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.BenTName, new { @class = "form-control", required = "true" })
                </div>
            </div>
        </div>
    </div>
}