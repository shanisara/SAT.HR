@model List<SAT.HR.Models.ManageUserViewModel>

@{
    ViewBag.Title = "ManageUser";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">settings_applications</i>
                        </div>
                        <h4 class="card-title"><span>จัดการผู้ใช้งาน</span></h4>
                    </div>
                    <div class="card-body">
                        <div class="material-datatables">
                            <table id="datatables" data-url="@Url.Content("~/Employee/Index")" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                                <thead>
                                    <tr>
                                        <th style="width:4%">ลำดับ</th>
                                        <th style="width:16%">เลขประจำตัวประชาชน</th>
                                        <th style="width:19%">ชื่อ-นามสกุล</th>
                                        <th style="width:32%">ตำแหน่ง</th>
                                        <th style="width:9%" class="disabled-sorting text-left">สร้างผู้ใช้งาน</th>
                                        <th style="width:20%" class="disabled-sorting text-center">ระงับการใช้งาน/ยกเลิกการระงับ</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>                                    
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function () {

            $('.selectpicker').selectpicker();

            var dataTable = {
                table: null,
                initializeDataTable: function (usertype, userstatus) {
                    $table = $('#datatables');
                    dataTable.table = $table.DataTable({
                        "proccessing": true,
                        "serverSide": true,
                        responsive: true,
                        language: {
                            search: "_INPUT_",
                            searchPlaceholder: "ค้นหา",
                            zeroRecords: "ไม่พบข้อมูล",
                        },
                        ajax: {
                            url: $table.data("url"),
                            data: { userType: usertype, userStatus: userstatus },
                            type: "POST",
                        },
                        "columns": [
                            { "data": "RowNumber", "orderable": false, "searchable": false },
                            { "data": "IDCard", "orderable": true },
                            { "data": "FullNameTh", "orderable": true },
                            { "data": "PoName", "orderable": true },
                        ],
                        "columnDefs": [
                            {
                                "render": function (data, type, row) {
                                    return '<div title="สังกัด" style="font-size: 12px; color: #0000ff; margin-bottom: 5px; cursor: pointer"><i class="fa fa-home"></i> ' + row.FullDepartment + '</div><span> ' + row.PoName + '</span> ';
                                }, "targets": 3
                            },
                            {
                                "render": function (data, type, row) {
                                    if (row.UserName == '')
                                        return '<div class="td-actions text-left" id="div-' + row.UserID +'"><button class="btn btn-facebook create-user" type="button" data-id="' + row.UserID + '">สร้างผู้ใช้งาน</button></div>';
                                    else
                                        return '<div class="td-actions text-left">' + row.UserName + '</div>';
                                }, "targets": 4
                            },
                            {
                                "render": function (data, type, row) {
                                    if (row.IsTerminate == true)
                                        return '<div class="td-actions text-center"><button class="btn btn-danger terminate-user" type="button" data-type="1" data-id="' + row.UserID + '" data-name="' + row.UserName + '">ยกเลิกการระงับ</button></div>';
                                    else
                                        return '<div class="td-actions text-center"><button class="btn btn-success terminate-user" type="button" data-type="2" data-id="' + row.UserID + '" data-name="' + row.UserName + '">ระงับการใช้งาน</button></div>';
                                }, "targets": 5
                            },
                        ],
                        "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                        "pagingType": "full_numbers",
                    });


                },
                getData: function () {
                    if (dataTable.table == null)
                        dataTable.initializeDataTable();
                    else
                        dataTable.table.ajax.reload();
                },
                renewData: function () {
                    $('#datatables').dataTable().fnDestroy();
                    dataTable.initializeDataTable();
                },
            }

            dataTable.getData(1, 1);


            $table.on('click', '.create-user', function () {
                var $button = $(this);
                var userid = $button.data("id");
                var url = '@Url.Action("CreateUserName", "Employee")?userid=' + userid;
                swal({
                    title: '',
                    text: "สร้างผู้ใช้งาน",
                    type: 'question',
                    showCancelButton: true,
                    confirmButtonClass: 'btn btn-success',
                    cancelButtonClass: 'btn btn-danger',
                    confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnYes)',
                    cancelButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnNo)',
                    buttonsStyling: false
                }).then(function () {
                    $.ajax({
                        type: 'POST',
                        url: url,
                        success: function (res) {
                            var username = res.UserName;
                            if (res.MessageCode == null) {
                                swal({
                                    title: '',
                                    text: "สร้างผู้ใช้งานเรียบร้อยแล้ว",
                                    type: 'success',
                                    confirmButtonClass: "btn btn-success",
                                    confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                                    buttonsStyling: false
                                }).then(function () {
                                    $button.remove();
                                    $("#div-" + userid).append('<div class="td-actions text-left">' + username + '</div>');
                                }).catch(swal.noop)
                            }
                            else {
                                alert();
                                swal({
                                    title: '',
                                    text: res.MessageText,
                                    type: 'success',
                                    confirmButtonClass: "btn btn-success",
                                    confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                                    buttonsStyling: false
                                }).then(function () {
                                }).catch(swal.noop)
                            }
                        }
                    });
                }).catch(swal.noop)
            });



            $table.on('click', '.terminate-user', function () {
                var $button = $(this);
                var userid = $button.data("id");
                var name = $button.data("name");
                var type = $button.data('type');
                var msgconfirm = (type == '1' ? 'ยกเลิกการระงับผู้ใช้งาน ' : 'ระงับผู้ใช้งาน ') + name;
                var isterminate = type == '1' ? false : true;
                var url = '@Url.Action("TerminateUser", "Employee")?userid=' + userid + "&terminate=" + isterminate;
                swal({
                    title: '',
                    text: msgconfirm,
                    type: 'question',
                    showCancelButton: true,
                    confirmButtonClass: 'btn btn-success',
                    cancelButtonClass: 'btn btn-danger',
                    confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnYes)',
                    cancelButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnNo)',
                    buttonsStyling: false
                }).then(function () {
                    $.ajax({
                        type: 'POST',
                        url: url,
                        success: function (res) {
                            if (res.MessageCode == null) {
                                swal({
                                    title: '',
                                    text: msgconfirm + " เรียบร้อยแล้ว",
                                    type: 'success',
                                    confirmButtonClass: "btn btn-success",
                                    confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                                    buttonsStyling: false
                                }).then(function () {
                                    if (type == '1') {
                                        $button.data('type', 2);
                                        $button.removeClass("btn-danger").addClass("btn-success");
                                        $button.html('ระงับการใช้งาน');
                                    }
                                    else {
                                        $button.data('type', 1);
                                        $button.removeClass("btn-success").addClass("btn-danger");
                                        $button.html('ยกเลิกการระงับ');
                                    }
                                }).catch(swal.noop)
                            }
                            else {
                                alert();
                                swal({
                                    title: '',
                                    text: res.MessageText,
                                    type: 'success',
                                    confirmButtonClass: "btn btn-success",
                                    confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                                    buttonsStyling: false
                                }).then(function () {
                                }).catch(swal.noop)
                            }
                        }
                    });
                }).catch(swal.noop)
            });

        });
</script>
}