                                    buttonsStyling: false
                                }).then(function () {

                                }).catch(swal.noop)
                            }
                            else {
                                alert();
                                swal({
                                    title: '',
                                    text: res.MessageText,
                                    type: 'success',
                                    confirmButtonClass: "btn btn-success",
                                    confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                                    buttonsStyling: false
                                }).then(function () {
