@model SAT.HR.Models.MailTemplateViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formDetail" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.MailID)

    <div class="col-md-12">
        <div class="row">
            @Html.Label("รหัส", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.MailCode, new { @class = "form-control", required = "true", @disabled= "disabled" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("ชื่อ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.MailName, new { @class = "form-control", required = "true" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("เรื่อง", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.MailSubject, new { @class = "form-control", required = "true" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("รายละเอียด", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <div class="form-group bmd-form-group">
                    @Html.TextAreaFor(m => m.MailBody, 15, 100, new { @class = "form-control", required = "true" })
                </div>
            </div>
        </div>
        <div class="row" style="display:none;">
            @Html.Label("To", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.MailTo, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row" style="display:none;">
            @Html.Label("From", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.MailFrom, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row" style="display:none;">
            @Html.Label("CC", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.MailCCTo, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row" style="display:none;">
            @Html.Label("BCC", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.MailBCCTo, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
}
