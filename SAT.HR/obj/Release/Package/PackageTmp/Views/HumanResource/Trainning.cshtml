
@{
    ViewBag.Title = "Trainning";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">accessibility</i>
                    </div>
                    <h4 class="card-title"><span> การฝึกอบรม </span></h4>
                </div>
                <div class="card-body">
                    <div class="toolbar pull-right">
                        <button class="btn btn-primary btn-sm add-position-Transfer" data-toggle="modal"><i class="material-icons">add</i> เพิ่มหลักสูตร</button>
                    </div>
                    <div class="position-transfer">
                        <table id="datatables" data-url="@Url.Content("~/HumanResource/Trainning")" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                            <thead>
                                <tr>
                                    <th style="width:5%" class="disabled-sorting">ลำดับ</th>
                                    <th style="width:15%">ประเภท</th>
                                    <th style="width:30%">ชื่อหลักสูตร</th>
                                    <th style="width:10%">วันที่เริ่ม</th>
                                    <th style="width:10%">วันที่สิ้นสุด</th>
                                    <th style="width:10%">จำนวน(คน)</th>
                                    <th style="width:10%">สถานะ</th>
                                    <th style="width:10%" class="disabled-sorting text-right">ปฏิบัติการ</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


