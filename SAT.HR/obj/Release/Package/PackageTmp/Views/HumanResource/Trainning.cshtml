@model SAT.HR.Models.TrainingViewModel

@{
    ViewBag.Title = "Trainning";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">accessibility</i>
                    </div>
                    <h4 class="card-title"><span> การฝึกอบรม </span></h4>
                </div>
                <div class="card-body">
                    <div class="toolbar pull-right">
                        <button class="btn btn-primary btn-sm add-training" data-toggle="modal"><i class="material-icons">add</i> เพิ่มหลักสูตร</button>
                    </div>
                    <div class="position-transfer">
                        <table id="datatables" data-url="@Url.Content("~/HumanResource/Trainning")" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                            <thead>
                                <tr>
                                    <th style="width:5%" class="disabled-sorting">ลำดับ</th>
                                    <th style="width:10%">รหัส</th>
                                    <th style="width:12%">ประเภท</th>
                                    <th style="width:28%">ชื่อหลักสูตร</th>
                                    <th style="width:8%">วันที่เริ่ม</th>
                                    <th style="width:9%">วันที่สิ้นสุด</th>
                                    <th style="width:9%">จำนวน(คน)</th>
                                    <th style="width:8%">สถานะ</th>
                                    <th style="width:10%" class="disabled-sorting text-right">ปฏิบัติการ</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            var dataTable = {
                table: null,
                initializeDataTable: function () {
                    $table = $('#datatables');

                    dataTable.table = $table.DataTable({
                        "proccessing": true,
                        "serverSide": true,
                        responsive: true,
                        language: {
                            search: "_INPUT_",
                            searchPlaceholder: "ค้นหา",
                            zeroRecords: "ไม่พบข้อมูล",
                        },
                        ajax: {
                            url: $table.data("url"),
                            type: "POST",
                        },
                        "columns": [
                            { "data": "RowNumber", "orderable": false, "searchable": false },
                            { "data": "CourseNo", "orderable": true },
                            { "data": "CourseTName", "orderable": true },
                            { "data": "CourseName", "orderable": true },
                            { "data": "DateFromText", "orderable": true },
                            { "data": "DateToText", "orderable": true },
                            { "data": "Total", "orderable": true },
                            { "data": "StatusName", "orderable": true },
                        ],
                        "columnDefs": [
                            {
                                "render": function (data, type, row) {
                                    return '<div class="td-actions text-center">' + data + '</div>';
                                }, "targets": [6]
                            },
                            {
                                "render": function (data, type, row) {
                                    var inner = '<div class="td-actions text-right">' +
                                                    '<button title="แสดงข้อมูล" type="button" class="btn btn-round btn-success edit-training" data-id="' + row.CourseID + '"><i class="material-icons">edit</i></button>&nbsp;&nbsp;' +
                                                    '<button title="ลบ" type="button" class="btn btn-round btn-danger delete-training" data-id="' + row.CourseID + '"><i class="material-icons">close</i></button>' +
                                                '</div>';
                                    return inner;
                                }, "targets": 8
                            },
                        ],
                        "order": [[2, "asc"]],
                        "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                        "pagingType": "full_numbers",
                    });

                    dataTable.table.on('click', '.edit-training', function () {
                        var id = $(this).data("id");
                        var url = '@Url.Action("TrainningDetail", "HumanResource")/' + id;
                        window.location.href = url;
                    });

                    dataTable.table.on('click', '.delete-training', function () {
                        var id = $(this).data("id");
                        swal({
                            title: '',
                            text: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.ConfirmDelete)",
                            type: 'question',
                            showCancelButton: true,
                            confirmButtonClass: 'btn btn-success',
                            cancelButtonClass: 'btn btn-danger',
                            confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnYes)',
                            cancelButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnNo)',
                            buttonsStyling: false
                        }).then(function () {
                            var url = '@Url.Action("DeleteTraining", "HumanResource")/' + id;
                            $.ajax({
                                type: 'POST',
                                url: url,
                                success: function (res) {
                                    if (res.MessageCode == null) {
                                        swal({
                                            title: "",
                                            text: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.SaveSucceed)",
                                            type: "success",
                                            confirmButtonClass: "btn btn-primary",
                                            confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                                            buttonsStyling: false,
                                        }).then(function () {
                                            dataTable.getData();
                                        });
                                    }
                                    else {
                                        swal({
                                            title: '',
                                            text: res.MessageText,
                                            type: 'error',
                                            confirmButtonClass: "btn btn-primary",
                                            confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnYes)',
                                            buttonsStyling: false
                                        }).catch(swal.noop);
                                    }
                                }
                            });
                        });
                    });
                },
                getData: function () {
                    if (dataTable.table == null)
                        dataTable.initializeDataTable();
                    else
                        dataTable.table.ajax.reload();
                },
                renewData: function () {
                    $('#datatables').dataTable().fnDestroy();
                    dataTable.initializeDataTable();
                },
            }

            dataTable.getData();

            $(".add-training").click(function () {
                var url = '@Url.Action("TrainningDetail", "HumanResource")';
                window.location.href = url;
            });

           

        });
    </script>
}