
@{
    ViewBag.Title = "IndividualPlan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">accessibility</i>
                    </div>
                    <h4 class="card-title"><span> การวางแผนพัฒนารายบุคคล </span></h4>
                </div>
                <div class="card-body">
                    <div class="material-datatables">
                        <table id="datatables" data-url="@Url.Content("~/Employee/Index")" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                            <thead>
                                <tr>
                                    <th style="width:5%" class="disabled-sorting">ลำดับ</th>
                                    <th style="width:15%">เลขประจำตัวประชาชน</th>
                                    <th style="width:18%">ชื่อ-นามสกุล</th>
                                    <th style="width:52%">ตำแหน่ง</th>
                                    <th style="width:10%" class="disabled-sorting text-right">ปฏิบัติการ</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {

            $('.selectpicker').selectpicker();

            var dataTable = {
                table: null,
                initializeDataTable: function (usertype, userstatus) {
                    $table = $('#datatables');
                    dataTable.table = $table.DataTable({
                        "proccessing": true,
                        "serverSide": true,
                        responsive: true,
                        language: {
                            search: "_INPUT_",
                            searchPlaceholder: "ค้นหา",
                            zeroRecords: "ไม่พบข้อมูล",
                        },
                        ajax: {
                            url: $table.data("url"),
                            data: { userType: usertype, userStatus: userstatus },
                            type: "POST",
                        },
                        "columns": [
                            { "data": "RowNumber", "orderable": false, "searchable": false },
                            { "data": "IDCard", "orderable": true },
                            { "data": "FullNameTh", "orderable": true },
                            { "data": "PoName", "orderable": true },
                        ],
                        "columnDefs": [
                            {
                                "render": function (data, type, row) {
                                    var inner = '<div class="td-actions text-right">' +
                                                    '<button title="แสดงข้อมูล" type="button" class="btn btn-round btn-warning edit" data-id="' + row.UserID + '"><i class="material-icons">search</i></button>&nbsp;&nbsp;' +
                                                '</div>';
                                    return inner;
                                }, "targets": 4
                            },
                        ],
                        "order": [[2, "asc"]],
                        "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                        "pagingType": "full_numbers",
                    });

                    dataTable.table.on('click', '.edit', function () {
                        var id = $(this).data("id");
                        var url = '@Url.Action("IndividualPlanDetail", "HumanResource")/' + id;
                        window.location.href = url;
                    });
                    
                },
                getData: function () {
                    if (dataTable.table == null)
                        dataTable.initializeDataTable();
                    else
                        dataTable.table.ajax.reload();
                },
                renewData: function () {
                    $('#datatables').dataTable().fnDestroy();
                    dataTable.initializeDataTable();
                },
            }

            dataTable.getData(1, 1);

        });

    </script>
}