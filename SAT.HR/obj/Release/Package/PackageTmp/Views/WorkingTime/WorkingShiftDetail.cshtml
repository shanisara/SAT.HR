@model SAT.HR.Models.EmployeeViewModel
@{
    ViewBag.Title = "WorkingShiftDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">alarm_on</i>
                    </div>
                    <h4 class="card-title">
                        <span>  จัดการรอบการเข้าปฏิบัติงาน: </span>
                        @Html.HiddenFor(m => m.UserID)
                        <span class="text-primary">@Model.FullNameTh (@Model.IDCard)</span>
                        <button type="submit" class="btn btn-round pull-right btn-back">ย้อนกลับ</button>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row" style="margin-left: 8px;margin-top: -20px;">
                        <i class="fa fa-home"></i> &nbsp;<span style="margin-top:-5px;"> @Model.FullDepartment </span>
                    </div>
                    <div class="m-t-10 m-b-10">
                        <div class="form-horizontal">
                            <div class="row col-md-8 ml-auto mr-auto ">
                                @Html.Label("วันที่: ", null, new { @class = "col-form-label m-l-25" })
                                <div class="col-sm-3">
                                    @Html.TextBox("DateFrom", (string)ViewBag.DateFrom, new { @class = "form-control datepicker" })
                                </div>
                                @Html.Label("ถึงวันที่: ", null, new { @class = "col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.TextBox("DateTo", (string)ViewBag.DateTo, new { @class = "form-control datepicker" })
                                </div>
                                <button class="btn btn-success btn-sm btn-search" data-toggle="modal"><i class="material-icons">search</i>ค้นหา</button>
                            </div>
                            <div class="pull-right" style="margin-top: -40px;">
                                <button class="btn btn-primary btn-sm btn-add" data-toggle="modal"><i class="material-icons">add</i> เพิ่มรายการ</button>
                            </div>
                        </div>
                    </div>
                    <div class="material-datatables">
                        <table data-url="@Url.Content("~/WorkingTime/WorkingShiftByUser")" class="table table-striped table-no-bordered table-hover table-detail" cellspacing="0" style="width:100%">
                            <thead class="text-primary">
                                <tr>
                                    <th style="width:5%" class="disabled-sorting">ลำดับ</th>
                                    <th style="width:15%">ปี</th>
                                    <th style="width:30%">เดือน</th>
                                    <th style="width:20%;">เวลาเข้า</th>
                                    <th style="width:20%;">เวลาออก</th>
                                    <th style="width:10%" class="disabled-sorting text-right">ปฏิบัติการ</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Classic Modal -->
<div class="modal fade modal-detail" tabindex="-1" role="dialog" aria-labelledby="modalDetailLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-working">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span>จัดการรอบการเข้าปฏิบัติงาน</span></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="material-icons">clear</i>
                </button>
            </div>
            <div class="modal-body">
                <div class="content">
                    <div class="div-detail"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)</button>&nbsp;&nbsp;&nbsp;
                <button type="button" class="btn btn-primary btn-save">@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnSave)</button>
            </div>
        </div>
    </div>
</div>
<!--  End Modal -->

<style>

    .m-l-25{
        margin-left:25px;
    }
    .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
        vertical-align: top;
    }

    .modal-dialog-working {
        max-width: 850px;
    }
</style>

@section Scripts {
    <script>

        $(document).ready(function () {

            $('.datepicker').datetimepicker({
                format: 'DD/MM/YYYY',
                icons: {
                    time: "fa fa-clock-o",
                    date: "fa fa-calendar",
                    up: "fa fa-chevron-up",
                    down: "fa fa-chevron-down",
                    previous: 'fa fa-chevron-left',
                    next: 'fa fa-chevron-right',
                    today: 'fa fa-screenshot',
                    clear: 'fa fa-trash',
                    close: 'fa fa-remove'
                }
            });

            var dataTable = {
                table: null,
                initializeDataTable: function () {

                    var userid = $('#UserID').val();
                    var datefrom = $('#DateFrom').val();
                    var dateto = $('#DateTo').val();

                    $table = $('.table-detail');

                    dataTable.table = $table.DataTable({
                        "proccessing": true,
                        "serverSide": true,
                        paging: false,
                        bFilter: false,
                        ordering: false,
                        searching: true,
                        language: { zeroRecords: "ไม่พบข้อมูล" },
                        dom: 't',
                        ajax: {
                            url: $table.data("url"),
                            data: { userid: userid, datefrom: datefrom, dateto: dateto },
                            type: "POST",
                        },
                        "columns": [
                            { "data": "RowNumber", "orderable": false, "searchable": false },
                            { "data": "WsYear", "orderable": true },
                            { "data": "WsMonth", "orderable": true },
                            { "data": "ActTimeIn", "orderable": true },
                            { "data": "ActTimeOut", "orderable": true },
                        ],
                        "columnDefs": [
                            {
                                "render": function (data, type, row) {
                                    var inner = '<div class="td-actions pull-right">' +
                                                    '<button title="แก้ไข" type="button" rel="tooltip" class="btn btn-round btn-success edit" data-id="' + row.WsID + '"><i class="material-icons">edit</i></button>&nbsp;&nbsp;' +
                                                    '<button title="ลบ" type="button" rel="tooltip" class="btn btn-round btn-danger delete" data-id="' + row.WsID + '"><i class="material-icons">close</i></button>' +
                                                '</div>';
                                    return inner;
                                }, "targets": 5
                            },
                        ]
                    });

                    dataTable.table.on('click', '.edit', function () {
                        var id = $(this).data("id");
                        var userid = $("#UserID").val();
                        var url = '@Url.Action("WorkingShiftByID", "WorkingTime")';
                        $.post(url, { id: id, userid: userid }, function (data) {
                            $(".div-detail").html(data);
                            $('.modal-detail').modal('show');
                        });
                    });

                    dataTable.table.on('click', '.delete', function () {
                        var id = $(this).data("id");
                        swal({
                            title: '',
                            text: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.ConfirmDelete)",
                            type: 'question',
                            showCancelButton: true,
                            confirmButtonClass: 'btn btn-success',
                            cancelButtonClass: 'btn btn-danger',
                            confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnYes)',
                            cancelButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnNo)',
                            buttonsStyling: false
                        }).then(function () {
                            $.ajax({
                                type: 'POST',
                                url: '@Url.Action("DeleteWorkingShift", "WorkingTime")/' + id,
                                success: function (res) {
                                    if (res.MessageCode == null) {
                                        swal({
                                            title: "",
                                            text: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.DeleteSucceed)",
                                            type: "success",
                                            confirmButtonClass: "btn btn-primary",
                                            confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                                            buttonsStyling: false
                                        }).then(function () {
                                            dataTable.getData();
                                        });
                                    }
                                    else {
                                        swal({
                                            title: '',
                                            text: res.MessageText,
                                            type: 'error',
                                            confirmButtonClass: "btn btn-primary",
                                            confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnYes)',
                                            buttonsStyling: false
                                        }).catch(swal.noop);
                                    }
                                }
                            });
                        }).catch(swal.noop)
                    });
                },
                getData: function () {
                    if (dataTable.table == null)
                        dataTable.initializeDataTable();
                    else
                        dataTable.table.ajax.reload();
                }
            }

            dataTable.getData();


            $(".btn-search").click(function () {
                $('.table-detail').dataTable().fnDestroy();
                dataTable.initializeDataTable();
            });

            $(".btn-add").click(function () {
                var userid = $('#UserID').val();
                var url = '@Url.Action("WorkingShiftByID", "WorkingTime")';
                $.post(url, { id: 0, userid: userid }, function (data) {
                    $(".div-detail").html(data);
                    $('.modal-detail').modal('show');
                });
            });

            $(".btn-back").click(function () {
                var url = '@Url.Action("WorkingShift", "WorkingTime")';
                window.location.href = url;
            });

            $(".btn-save").click(function () {
                 var $valid = $('.form-detail').valid();
                 if (!$valid) {
                    return false;
                 }
                 else {
                     $.ajax({
                        type: 'POST',
                        url: '@Url.Action("SaveWorkingShift", "WorkingTime")',
                        data: $(".form-detail").serialize(),
                        success: function (res) {
                            if (res.MessageCode == null) {
                                swal({
                                    title: "",
                                    text: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.SaveSucceed)",
                                    type: "success",
                                    buttonsStyling: false,
                                    confirmButtonClass: "btn btn-primary",
                                    confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                                }).then(function () {
                                    $('.modal-detail').modal('hide');
                                    dataTable.getData();
                                });
                            }
                            else {
                                swal({
                                    title: '',
                                    text: res.MessageText,
                                    type: 'error',
                                    confirmButtonClass: "btn btn-primary",
                                    confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnYes)',
                                    buttonsStyling: false
                                }).catch(swal.noop)
                            }
                        }
                    });
                 }
             });
        });

    </script>
}