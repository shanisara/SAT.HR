@model SAT.HR.Models.EmployeeViewModel

@{
    ViewBag.Title = "WorkingShiftDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">alarm_on</i>
                    </div>
                    <h4 class="card-title">
                        <span>  จัดการรอบการเข้าปฏิบัติงาน: </span>
                        @Html.HiddenFor(m => m.UserID)
                        <span class="text-primary">@Model.FullNameTh (@Model.IDCard)</span>
                        <button type="submit" class="btn btn-round pull-right btn-back">ย้อนกลับ</button>
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row" style="margin-left: 8px;margin-top: -20px;">
                        <i class="fa fa-home"></i> &nbsp;<span style="margin-top:-5px;"> @Model.DivName / @Model.DepName / @Model.SecName </span>
                    </div>
                    <div class="m-t-10 m-b-10">
                        <div class="form-horizontal">
                            <div class="row col-md-8 ml-auto mr-auto ">
                                @Html.Label("วันที่: ", null, new { @class = "col-form-label m-l-25" })
                                <div class="col-sm-3">
                                    @Html.TextBox("DateFrom", null, "{0:dd-MM-yyyy}", new { @class = "form-control datepicker" })
                                </div>
                                @Html.Label("ถึงวันที่: ", null, new { @class = "col-form-label text-right" })
                                <div class="col-sm-3">
                                    @Html.TextBox("DateTo", null, "{0:dd-MM-yyyy}", new { @class = "form-control datepicker" })
                                </div>
                                <button class="btn btn-success btn-sm btn-search" data-toggle="modal"><i class="material-icons">search</i>ค้นหา</button>
                            </div>
                            <div class="pull-right" style="margin-top: -40px;">
                                <button class="btn btn-primary btn-sm btn-add" data-toggle="modal"><i class="material-icons">add</i> เพิ่มรายการ</button>
                            </div>
                        </div>
                    </div>
                    <div class="material-datatables">
                        <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                            <thead class="text-primary">
                                <tr>
                                    <th style="width:5%" class="disabled-sorting">ลำดับ</th>
                                    <th style="width:15%">ปี</th>
                                    <th style="width:30%">เดือน</th>
                                    <th style="width:20%;">เวลาเข้า</th>
                                    <th style="width:20%;">เวลาออก</th>
                                    <th style="width:10%" class="disabled-sorting text-right">ปฏิบัติการ</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Classic Modal -->
<div class="modal fade modal-detail" tabindex="-1" role="dialog" aria-labelledby="modalDetailLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-working">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span>จัดการรอบการเข้าปฏิบัติงาน</span></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="material-icons">clear</i>
                </button>
            </div>
            <div class="modal-body">
                <div class="content">
                    <div class="div-detail"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)</button>&nbsp;&nbsp;&nbsp;
                <button type="button" class="btn btn-sm btn-primary" id="btn-save">@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnSave)</button>
            </div>
        </div>
    </div>
</div>
<!--  End Modal -->

<style>

    .m-l-25{
        margin-left:25px;
    }
    .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
        vertical-align: top;
    }

    .bootstrap-select:not([class*=col-]):not([class*=form-control]):not(.input-group-btn) {
        width: 60px;
        margin-left: 13px;
        margin-top: -5px;
    }

    .modal-dialog-working {
        max-width: 850px;
    }
</style>

@section Scripts {
    <script>

        $(document).ready(function () {

             $(".btn-add").click(function () {
                var url = '@Url.Action("WorkingShiftDetailByID", "WorkingTime")';
                $.post(url, { id: 0 }, function (data) {
                    $(".div-detail").html(data);
                    $('.modal-detail').modal('show');
                });
            });


            $(".btn-back").click(function () {
                var url = '@Url.Action("WorkingShift", "WorkingTime")';
                window.location.href = url;
            });
        });

    </script>
}