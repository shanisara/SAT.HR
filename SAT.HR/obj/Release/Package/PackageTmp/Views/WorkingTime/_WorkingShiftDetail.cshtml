@model SAT.HR.Models.WorkingShiftViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-detail" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserID)
    @Html.HiddenFor(m => m.WsID)

    <div class="form-horizontal">
        <div class="row">
            <label class="col-sm-2 col-form-label">ปี<span class="text-danger"> *</span></label>
            <div class="col-sm-4">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.WsYear, new { @class = "form-control", type = "number", required = "true" })
                </div>
            </div>
            <label class="col-sm-2 col-form-label">เดือน<span class="text-danger"> *</span></label>
            <div class="col-sm-4">
                <div class="form-group bmd-form-group">
                    @Html.DropDownListFor(m => m.WsMonth, new SelectList((IEnumerable<SelectListItem>)ViewBag.Month, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "selectpicker usertype", data_style = "select-with-transition" })
                </div>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-2 col-form-label">เวลาเข้า<span class="text-danger"> *</span></label>
            <div class="col-sm-4">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.Act_TimeIn, "{0:dd-MM-yyyy HH:mm}", new { @class = "form-control datetimepicker", required = "true" })
                </div>
            </div>
            <label class="col-sm-2 col-form-label">เวลาออก<span class="text-danger"> *</span></label>
            <div class="col-sm-4">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.Act_TimeOut, "{0:dd-MM-yyyy HH:mm}", new { @class = "form-control datetimepicker", required = "true" })
                </div>
            </div>
        </div>
        @*<div class="row">
            <label class="col-sm-2 col-form-label">ปรับเวลาเข้า<span class="text-danger"> *</span></label>
            <div class="col-sm-4">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.Adj_TimeIn, "{0:dd-MM-yyyy HH:mm}", new { @class = "form-control datetimepicker", required = "true" })
                </div>
            </div>
            <label class="col-sm-2 col-form-label">ปรับเวลาออก<span class="text-danger"> *</span></label>
            <div class="col-sm-4">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.Adj_TimeIn, "{0:dd-MM-yyyy HH:mm}", new { @class = "form-control datetimepicker", required = "true" })
                </div>
            </div>
        </div>*@
    </div>
}

<style>
    .col-form-label {
        font-size: 14px;
        margin-top:5px;
    }
</style>

<script>

    $('.selectpicker').selectpicker();

    $('.datetimepicker').datetimepicker({
        format: 'DD/MM/YYYY HH:mm',
        icons: {
            time: "fa fa-clock-o",
            date: "fa fa-calendar",
            up: "fa fa-chevron-up",
            down: "fa fa-chevron-down",
            previous: 'fa fa-chevron-left',
            next: 'fa fa-chevron-right',
            today: 'fa fa-screenshot',
            clear: 'fa fa-trash',
            close: 'fa fa-remove'
        }
    });
</script>
