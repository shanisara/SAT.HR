@model SAT.HR.Models.BenefitProvidentFundViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-detail" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserID)
    @Html.HiddenFor(m => m.BpID)

    <div class="form-horizontal">
        <div class="row">
            @Html.Label("ปีบัญชี", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-3">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.BpYear, new { @class = "form-control", type = "number" })
                </div>
            </div>
            @Html.Label("วันที่เปลี่ยนแปลงเงินสะสม", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-3">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.BpDateChangeFund, "{0:dd-MM-yyyy}", new { @class = "form-control datepicker" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("เงินสะสม", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-3">
                <div class="dropdown bootstrap-select dropup">
                    @Html.DropDownListFor(x => x.BpAccumFundCuID, new SelectList((IEnumerable<SelectListItem>)ViewBag.BpAccumFundCu, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "selectpicker", data_style = "select-with-transition" })
                </div>
            </div>
            @Html.Label("เงินสมทบ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-3">
                <div class="dropdown bootstrap-select dropup">
                    @Html.DropDownListFor(x => x.BpAssoFundCuID, new SelectList((IEnumerable<SelectListItem>)ViewBag.BpAssoFundCu, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "selectpicker", data_style = "select-with-transition" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("ผู้รับผลประโยชน์ลำดับที่ 1", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.BpBeneficiary1, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("ผู้รับผลประโยชน์ลำดับที่ 2", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.BpBeneficiary2, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("ผู้รับผลประโยชน์ลำดับที่ 3", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.BpBeneficiary3, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("ผู้รับผลประโยชน์ลำดับที่ 4", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.BpBeneficiary4, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("ผู้รับผลประโยชน์ลำดับที่ 5", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.BpBeneficiary5, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
}
<script>
    $('.selectpicker').selectpicker();

    $('.datepicker').datetimepicker({
        format: 'DD/MM/YYYY',
        icons: {
            time: "fa fa-clock-o",
            date: "fa fa-calendar",
            up: "fa fa-chevron-up",
            down: "fa fa-chevron-down",
            previous: 'fa fa-chevron-left',
            next: 'fa fa-chevron-right',
            today: 'fa fa-screenshot',
            clear: 'fa fa-trash',
            close: 'fa fa-remove'
        }
    });
</script>
