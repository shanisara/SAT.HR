@model SAT.HR.Models.DashboardViewModel
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card m-t-15">
                <div class="card-body">
                    <h4 class="card-title"><span>ประกาศ</span></h4>
                    <div class="table-responsive">
                        <table class="table">
                            <tbody>
                                @if (Model.Announcement != null)
                                {
                                    for (int i = 0; i < Model.Announcement.Count; i++)
                                    {
                                        <tr>
                                            <td class="text-center">&#9679;</td>
                                            <td class="w-90"><a href="@Url.Action("Announcement", "Home", new { id = Model.Announcement[i].AnnID })">@Model.Announcement[i].AnnTopic</a></td>
                                            <td class="w-10">@Convert.ToDateTime(Model.Announcement[i].AnnDate).ToString("dd/MM/yyyy")</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

