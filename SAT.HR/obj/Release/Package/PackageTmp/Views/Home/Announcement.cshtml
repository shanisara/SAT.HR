@model SAT.HR.Models.AnnouncementViewModel
@{
    ViewBag.Title = "Announcement";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">assignment</i>
                    </div>
                    <h4 class="card-title">
                        <span> ประกาศ <small> </small></span>
                        <button type="button" class="btn btn-round pull-right btn-back" onclick="window.location = '@Url.Action("Dashboard", "Home")'">ย้อนกลับ</button>
                    </h4>
                </div>
                <div class="card-body">
                    <br />
                    <p>
                        <span class="text-title">วันที่ประกาศ : </span>@Convert.ToDateTime(Model.AnnDate).ToString("dd/MM/yyyy")
                    </p>
                    <p>
                        <span class="text-title">หัวข้อ : </span> @Model.AnnTopic
                    </p>
                    <p>
                        <span class="text-title">รายละเอียด : </span>	@Html.Raw(Model.AnnDescription)
                    </p>
                    <p>
                        <span class="text-title">ดาวน์โหลด : </span>
                        <a href="@Url.Action("DownloadAnnouncement", "Home", new { id = Model.AnnID })">@Model.AnnFileName</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-title{
        font-weight:bold;
    }
</style>

