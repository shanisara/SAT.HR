
@{
    ViewBag.Title = "MailTemplate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">settings_applications</i>
                        </div>
                        <h4 class="card-title"><span>รายการรูปแบบจดหมาย</span></h4>
                    </div>
                    <div class="card-body">
                        @*<div class="toolbar">
                            <button class="btn btn-primary btn-sm pull-right" data-toggle="modal" id="btnAdd"><i class="material-icons">add</i> เพิ่มรูปแบบจดหมาย</button>
                        </div>*@
                        <div class="material-datatables">
                            <table id="datatables" data-url="@Url.Content("~/Master/MailTemplate")" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                                <thead>
                                    <tr>
                                        <th style="width:10%">ลำดับ</th>
                                        <th style="width:10%">รหัส</th>
                                        <th style="width:20%">ชื่อ</th>
                                        <th style="width:20%">เรื่อง</th>
                                        <th style="width:10%" class="disabled-sorting text-right">ปฏิบัติการ</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Classic Modal -->
<div class="modal fade modal-large" id="modalDetail" tabindex="-1" role="dialog" aria-labelledby="modalDetailLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span>ข้อมูลรูปแบบจดหมาย</span></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="material-icons">clear</i>
                </button>
            </div>
            <div class="modal-body">
                <div class="content">
                    <div class="container-fluid">
                        <div id="detail"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)</button>&nbsp;&nbsp;&nbsp;
                <button type="button" class="btn btn-sm btn-primary" id="btnSave">@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnSave)</button>
            </div>
        </div>
    </div>
</div>
<!--  End Modal -->



@section Scripts {
    <script>
        $(document).ready(function () {

            var dataTable = {
                table: null,
                initializeDataTable: function () {
                    $table = $('#datatables');

                    dataTable.table = $table.DataTable({
                        "proccessing": true,
                        "serverSide": true,
                        responsive: true,
                        language: {
                            search: "_INPUT_",
                            searchPlaceholder: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.searchPlaceholder)",
                        },
                        ajax: {
                            url: $table[0].dataset["url"],
                            type: "POST",
                        },
                        "columns": [
                            { "data": "RowNumber", "orderable": true },
                            { "data": "MailCode", "orderable": true },
                            { "data": "MailName", "orderable": true },
                            { "data": "MailSubject", "orderable": true }
                        ],
                        "columnDefs": [
                            {
                                "render": function (data, type, row) {
                                    var inner = '<div class="td-actions text-right">' +
                                                    '<button type="button" rel="tooltip" class="btn btn-round btn-success edit" data-id="' + row.MailID + '"><i class="material-icons">edit</i></button>&nbsp;&nbsp;&nbsp;' +
                                                 '</div>';
                                    return inner;
                                }, "targets": 4
                            },
                        ],
                        "order": [[1, "asc"]],
                        "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                        "pagingType": "full_numbers",
                    });


                    dataTable.table.on('click', '.edit', function () {
                        var id = $(this)[0].dataset["id"];
                        var url = '@Url.Action("MailTemplateDetail", "Master")/' + id;
                        $.post(url, function (data) {
                            $("#detail").html(data);
                            $('#modalDetail').modal('show');
                        });
                    });

                },
                getData: function () {
                    if (dataTable.table == null)
                        dataTable.initializeDataTable();
                    else
                        dataTable.table.ajax.reload();
                }
            }


            // Save record
            $("#btnSave").click(function () {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("SaveMailTemplate", "Master")',
                    data: $("#formDetail").serialize(),
                    dataType: 'json',
                    success: function (res) {
                        if (res.MessageCode == null) {
                            swal({
                                title: "",
                                text: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.SaveSucceed)",
                                type: "success",
                                buttonsStyling: false,
                                confirmButtonClass: "btn btn-success",
                                confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                            }).then(function () {
                                dataTable.getData();
                                $('#modalDetail').modal('hide');
                            }).catch(swal.noop)
                        }
                        else {
                            alert(res.MessageText);
                        }
                    }
                });
            });

            dataTable.getData();

        });
    </script>
}
