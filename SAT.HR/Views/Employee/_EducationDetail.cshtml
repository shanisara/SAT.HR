@model SAT.HR.Models.UserEducationViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-education" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.HiddenFor(m => m.UserID)
        @Html.HiddenFor(m => m.UeID)
        @Html.HiddenFor(m => m.UeEduOfficial)
        @Html.HiddenFor(m => m.UeEduOfficialLevel)

        <div class="row occupation">
            @Html.Label("ระดับการศึกษา: ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10 m-t-10">
                @Html.DropDownListFor(n => n.EduID, new SelectList((IEnumerable<SelectListItem>)ViewBag.Education, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "form-control custom-select select-with-transition" })
            </div>
        </div>
        <div class="row occupation">
            @Html.Label("วุฒิการศึกษา: ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10 m-t-10">
                @Html.DropDownListFor(n => n.DegID, new SelectList((IEnumerable<SelectListItem>)ViewBag.Degree, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "form-control custom-select select-with-transition" })
            </div>
        </div>
        <div class="row occupation">
            @Html.Label("สาขาวิชา: ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10 m-t-10">
                @Html.DropDownListFor(n => n.MajID, new SelectList((IEnumerable<SelectListItem>)ViewBag.Major, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "form-control custom-select select-with-transition" })
            </div>
        </div>
        <div class="row">
            @Html.Label("สถาบัน: ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.UeInstituteName, new { @class = "form-control", required = "true" })
                </div>
            </div>
        </div>
        <div class="row occupation">
            @Html.Label("ประเทศ: ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10 m-t-10">
                @Html.DropDownListFor(n => n.CountryID, new SelectList((IEnumerable<SelectListItem>)ViewBag.Country, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "form-control custom-select select-with-transition" })
            </div>
        </div>
        <div class="row">
            @Html.Label("วันที่จบ: ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.UeGraduationDate, new { @class = "form-control datepicker" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("เกรดเฉลี่ย: ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.UeGPA, new { @class = "form-control", required = "true" })
                </div>
            </div>
        </div>
        <div class="row lifestatus">
            @Html.Label("ประเภทวุฒิ: ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-9 m-t-10">
                <div class="col-sm-10 checkbox-radios">
                    <div class="col-sm-4 form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input ufIsworked" type="checkbox" aria-required="true"> วุฒิบรรจุ
                            <span class="form-check-sign"><span class="check"></span></span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input ufIsworked" type="checkbox" aria-required="true"> วุฒิในระดับ
                            <span class="form-check-sign"><span class="check"></span></span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
    </div>

}