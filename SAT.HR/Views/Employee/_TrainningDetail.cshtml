@model SAT.HR.Models.UserTrainningViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-trainning" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserID)
    @Html.HiddenFor(m => m.UtID)
    <div>
        <div class="row">
            @Html.Label("ประเภท: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9 m-t-10">
                @Html.DropDownListFor(n => n.TtID, new SelectList((IEnumerable<SelectListItem>)ViewBag.TrainingType, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "form-control custom-select select-with-transition", required = "true" })
            </div>
        </div>
        <div class="row">
            @Html.Label("ประเทศ: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9 m-t-10">
                @Html.DropDownListFor(n => n.CountryID, new SelectList((IEnumerable<SelectListItem>)ViewBag.Country, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "form-control custom-select select-with-transition", required = "true" })
            </div>
        </div>
        <div class="row m-t-10">
            @Html.Label("หลักสูตร: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.UtCourse, new { @class = "form-control", required = "true" })
            </div>
        </div>
        <div class="row m-t-10">
            @Html.Label("วันที่เริ่ม: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.UtStartDateText, new { @class = "form-control datepicker" })
            </div>
        </div>
        <div class="row m-t-10">
            @Html.Label("วันที่สิ้นสุด: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.UtEndDateText, new { @class = "form-control datepicker" })
            </div>
        </div>
    </div>
}


<script>
    $('.datepicker').datetimepicker({
        format: 'DD/MM/YYYY',
        icons: {
            time: "fa fa-clock-o",
            date: "fa fa-calendar",
            up: "fa fa-chevron-up",
            down: "fa fa-chevron-down",
            previous: 'fa fa-chevron-left',
            next: 'fa fa-chevron-right',
            today: 'fa fa-screenshot',
            clear: 'fa fa-trash',
            close: 'fa fa-remove'
        }
    });
</script>


