@model SAT.HR.Models.UserFamilyViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "form-family" }))
{
    @Html.AntiForgeryToken()

    <siv id="" class="form-horizontal">
        @Html.HiddenFor(m => m.UserID)
        @Html.HiddenFor(m => m.UfID)
        <div class="row">
            @Html.Label("ชื่อ-สกุล: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    <input class="form-control" type="text" placeholder="">
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("เลขประจำตัวประชาชน: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    <input class="form-control" type="text" placeholder="">
                    <span class="bmd-help text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("วันเกิด: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    <input class="form-control" type="text" placeholder="">
                </div>
            </div>
        </div>
        <div class="row wedding">
            @Html.Label("วันที่สมรส: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    <input class="form-control" type="text" placeholder="">
                </div>
            </div>
        </div>
        <div class="row marital">
            @Html.Label("สถานะสมรส: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9 m-t-10">
                <select class="form-control custom-select" data-style="select-with-transition">
                    <option>-- กรุณาเลือก --</option>
                </select>
            </div>
        </div>
        <div class="row divorce">
            @Html.Label("วันที่หย่าร้าง: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    <input class="form-control" type="text" placeholder="">
                </div>
            </div>
        </div>
        <div class="row lifestatus">
            @Html.Label("สถานะการมีชีวิต: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9 m-t-20">
                <div class="col-sm-10 checkbox-radios">
                    <div class="col-sm-4 form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="exampleRadios" value="option2" checked=""> มีชีวิตอยู่
                            <span class="circle">
                                <span class="check"></span>
                            </span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="exampleRadios" value="option2" checked=""> เสียชีวิต
                            <span class="circle">
                                <span class="check"></span>
                            </span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row taxdeduc">
            @Html.Label("สิทธิลดหย่อน: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9 m-t-20">
                <div class="col-sm-10 checkbox-radios">
                    <div class="col-sm-4 form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="exampleRadios" value="option2" checked=""> ใช้สิทธิ
                            <span class="circle">
                                <span class="check"></span>
                            </span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="exampleRadios" value="option2" checked=""> ไม่ใช้สิทธิ
                            <span class="circle">
                                <span class="check"></span>
                            </span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row education">
            @Html.Label("สถานะศึกษา: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9 m-t-20">
                <div class="col-sm-10 checkbox-radios">
                    <div class="col-sm-4 form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="exampleRadios" value="option2" checked=""> ศึกษาอยู่
                            <span class="circle">
                                <span class="check"></span>
                            </span>
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label">
                            <input class="form-check-input" type="radio" name="exampleRadios" value="option2" checked=""> ไม่ได้ศึกษา
                            <span class="circle">
                                <span class="check"></span>
                            </span>
                        </label>
                    </div>
                </div>
            </div>
        </div>
        <div class="row occupation">
            @Html.Label("อาชีพ: ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9 m-t-10">
                <select class="form-control custom-select" data-style="select-with-transition">
                    <option>-- กรุณาเลือก --</option>
                </select>
            </div>
        </div>
        <div class="row isworked">
            <div class="col-sm-3 m-t-20"><label class="form-check">เคยเป็นพนักงาน กกท.</label></div>
            <div class="col-sm-1 m-t-10">
                <div class="form-check mr-auto">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" aria-required="true">
                        <span class="form-check-sign"><span class="check"></span></span>
                    </label>
                </div>
            </div>
            <div class="col-sm-8 m-t-20">
                <select class="form-control custom-select" data-style="select-with-transition">
                    <option>-- กรุณาเลือก --</option>
                </select>
            </div>
        </div>
    </siv>
}