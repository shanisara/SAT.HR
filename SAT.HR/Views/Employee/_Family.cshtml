                    }
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead class="text-primary">
                                <tr>
                                    <th>ชื่อ-สกุล</th>
                                    <th>เลขประจำตัวประชาชน</th>
                                    <th>วันเกิด</th>
                                    <th>อายุ</th>
                                    <th>สถานะการมีชีวิต</th>
                                    <th>สิทธิลดหย่อน</th>
                                    <th>เคยเป็นพนักงาน กกท.</th>
                                    <th>ปฏิบัติการ</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ListMother)
                                {
                                    <tr>
                                        <td>@item.UfName</td>
                                        <td>@item.UfCardID</td>
                                        <td>@item.UfDOB</td>
                                        <td>@item.UfAge</td>
                                        <td>@item.UfLifeStatusName</td>
                                        <td>@item.TdName</td>
                                        <td>@item.PoName</td>
                                        <td class="td-actions text-center">
                                            <button title="แก้ไข" type="button" rel="tooltip" class="btn btn-round btn-success edit-family" data-id="@item.UfID" data-rec-id="@item.RecID"><i class="material-icons">edit</i></button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-info card-header-text">
                    <div class="card-text">
                        <h5 class="card-title w-title">คู่สมรส</h5>
                    </div>
                    @if (Model.ListSpouse.Count == 0)
