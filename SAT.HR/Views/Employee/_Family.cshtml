        $('.lifestatus').show();
        $('.taxdeduc').show();
        $('.isworked').show();
        $('.modal-family').modal('show');
    });

    $(".add-spouse").click(function () {
        $('.wedding').show();
        $('.marital').show();
        $('.divorce').show();
        $('.lifestatus').show();
        $('.taxdeduc').show();
        $('.occupation').show();
        $('.modal-family').modal('show');
    });

    $(".add-child").click(function () {
        $('.lifestatus').show();
        $('.education').show();
        $('.modal-family').modal('show');
