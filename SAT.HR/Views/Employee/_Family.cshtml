@model SAT.HR.Models.UserFamilyViewModel

<div class="content">
    @Html.Hidden("FamilyType")

    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-info card-header-text">
                    <div class="card-text">
                        <h5 class="card-title w-title">บิดา</h5>
                    </div>
                    @if (@ViewBag.CountFather == 0)
                    {
                    <button class="btn btn-primary btn-sm pull-right add-father" data-toggle="modal" style="width:100px;"> เพิ่มบิดา </button>
                    }
                </div>
                <div class="card-body">
                    <div class="material-datatables">
                        <table class="table table-father">
                            <thead class="text-primary">
                                <tr>
                                    <th style="width:17%">ชื่อ-สกุล</th>
                                    <th style="width:16%">เลขประจำตัวประชาชน</th>
