
<style>
    .table thead tr th {
        font-size: 15px;
    }

    .card [class*=card-header-] .card-text {
        border-radius: 3px;
        background-color: #999;
        padding: 5px;
        margin-top: -20px;
        margin-right: 8px;
        float: left;
        font-size: 5px;
    }

    .w-title {
        width: 60px;
        margin-left: 10px;
    }

    .bmd-label-Selected {
        color: #AAA;
        top: -1rem;
        font-size: .6875rem;
    }

    .bmd-form-group .bmd-label-fixed {
        top: -1rem;
        font-size: .6875rem;
    }

    .m-t-10 {
        margin-top:10px;
    }

</style>

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-info card-header-text">
                    <div class="card-text">
                        <h5 class="card-title w-title">บิดา</h5>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row m-t-10">
                        <div class="col-md-3">
                            <div class="form-group bmd-form-group">
                                @Html.Label("ชื่อ-สกุล", null, new { @class = "bmd-label-floating bmd-label-fixed" })
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group bmd-form-group">
                                @Html.Label("เลขประจำตัวประชาชน", null, new { @class = "bmd-label-floating bmd-label-fixed" })
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group bmd-form-group">
                                @Html.Label("วันเกิด", null, new { @class = "bmd-label-floating bmd-label-fixed" })
                                <input type="text" class="form-control datepicker" id="txt1">
                            </div>
                        </div>
                        <div class="col-md-1">
                            <div class="form-group bmd-form-group">
                                @Html.Label("อายุ", null, new { @class = "bmd-label-floating bmd-label-fixed" })
                                <input type="email" class="form-control">
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group"> 
                                @Html.Label("สถานะการมีชีวิต", null, new { @class = "label-select bmd-label-fixed" })
                                <select class="form-control custom-select" tabindex="-98" data-style="select-with-transition">
                                    <option>-- กรุณาเลือก --</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                @Html.Label("สิทธิลดหย่อน", null, new { @class = "label-select bmd-label-fixed" })
                                <select class="form-control custom-select" tabindex="-98" data-style="select-with-transition">
                                    <option>-- กรุณาเลือก --</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-check mr-auto">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" value="" required="" aria-required="true"> เคยเป็นพนักงาน กกท.
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

