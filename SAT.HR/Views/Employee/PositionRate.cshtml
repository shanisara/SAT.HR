@section Scripts {
    <script>
        $(document).ready(function () {

            var dataTable = {
                table: null,
                initializeDataTable: function (usertype) {
                    $table = $('#datatables');
                    dataTable.table = $table.DataTable({
                        "proccessing": true,
                        "serverSide": true,
                        responsive: true,
                        language: {
                            search: "_INPUT_",
                            searchPlaceholder: "ค้นหา",
                            zeroRecords: "ไม่พบข้อมูล",
                        },
                        ajax: {
                            url: $table.data("url"),
                            data: { userType: usertype },
                            type: "POST",
                        },
                        "columns": [
                            { "data": "RowNumber", "orderable": true, "orderable": false, "searchable": false },
                            { "data": "MpCode", "orderable": true },
                            { "data": "DivName", "orderable": true },
                        ],
                        "columnDefs": [
                            {
                                "render": function (data, type, row) {
                                    var inner = '<div title="สังกัด" style="font-size: 12px; color: #0000ff; margin-bottom: 5px; cursor: pointer">'+
                                                    '<i class="fa fa-home"></i> ' + row.FullDepartment + ''+
                                                '</div> '+
                                                '<span> ' + row.PoName + '</span> '+
                                                    '<div style= "font-size:12px; padding-top:2px;"> '+
                                                    '<span style="color:green"> ' + row.FullNameTh + '</span> '+
                                                '</div>';
                                    return inner;
                                }, "targets": 2
                            },
                            {
                                "render": function (data, type, row) {
                                    var inner = '<div class="td-actions text-right">' +
                                        '<button title="แสดงข้อมูล" type="button" class="btn btn-round btn-warning edit" data-id="' + row.MpID + '"><i class="material-icons">search</i></button>&nbsp;&nbsp;' +
                                        '</div>';
                                    return inner;
                                }, "targets": 3
                            },
                        ],
                        "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                        "pagingType": "full_numbers",
                    });

                    dataTable.table.on('click', '.edit', function () {
                        var id = $(this).data("id");
                        var usertype = $('#usertype').val();
                        var url = '@Url.Action("PositionRateDetail", "Employee")/'+id + "?type=" + usertype;
                        $.post(url, function (data) {
                            $(".detail-position").html(data);
                            $('.modal-position').modal('show');
                        });
                    });
                },
                getData: function (usertype) {
                    if (dataTable.table == null)
                        dataTable.initializeDataTable(usertype);
                    else
                        dataTable.table.ajax.reload();
                },
                renewData: function (usertype) {
                    $('#datatables').dataTable().fnDestroy();
                    dataTable.initializeDataTable(usertype);
                },
            }

            dataTable.getData(1);

            $('#usertype').change(function () {
                var usertype = $('#usertype').val();
                dataTable.renewData(usertype);
            });

            $(".btn-add").click(function () {
                var usertype = $('#usertype').val();
                var url = '@Url.Action("PositionRateDetail", "Employee")' + "?type=" + usertype;
                $.post(url, function (data) {
                    $(".detail-position").html(data);
                    $('.modal-position').modal('show');
                });
            });

            $(".btn-save").click(function () {
                var $valid = $('.form-position').valid();
                if (!$valid) {
                    //if ($("#DivID").val() == '') {
                    //    $('#DivID-error').text(''); //กรุณาระบุฝ่าย
                    //}
                    //if ($("#DepID").val() == '') {
                    //    $('#DepID-error').text(''); //กรุณาระบุกอง
                    //}
                    //if ($("#SecID").val() == '') {
                    //    $('#SecID-error').text(''); //กรุณาระบุงาน
                    //}
                    //if ($("#PoID").val() == '') {
                    //    $('#PoID-error').text(''); //กรุณาระบุตำแหน่ง
                    //}
                    return false;
                }
                else {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("SavePositionRate", "Employee")',
                        data: $(".form-position").serialize(),
                        dataType: 'json',
                        success: function (res) {
                            var msg = '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.SaveSucceed)'
                            if (res.ID != 0) {
                                msg = "เพิ่มอัตรากำลังพล " + res.ID + " เรียบร้อย";
                            }

                            if (res.MessageCode == null) {
                                swal({
                                    title: "",
                                    text: msg,
                                    type: "success",
                                    confirmButtonClass: "btn btn-primary",
                                    confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                                    buttonsStyling: false
                                }).then(function () {
                                    $('.modal-position').modal('hide');

                                    var usertype = $('#usertype').val();
                                    dataTable.getData(usertype);
                                });
                            }
                            else {
                                swal({
                                    title: '',
                                    text: res.MessageText,
                                    type: 'error',
                                    confirmButtonClass: "btn btn-primary",
                                    confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnYes)',
                                    buttonsStyling: false
                                }).catch(swal.noop);
                            }
                        }
                    });
                }
            });


        });

    </script>
}