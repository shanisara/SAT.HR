@model SAT.HR.Models.UserExcellentViewModel

<style>
    .bootstrap-select .dropdown-toggle[title="-- กรุณาเลือก --"] .filter-option-inner-inner {
        color: red;
    }
</style>

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-excellent" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.UserID)
    @Html.HiddenFor(m => m.UeID)

    <div class="form-horizontal">

        @Html.HiddenFor(m => m.UserID)
        @Html.HiddenFor(m => m.ExID)

        <div class="row occupation">
            @Html.Label("ประเภท: ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10 m-t-10">
                @Html.DropDownListFor(n => n.ExTID, new SelectList((IEnumerable<SelectListItem>)ViewBag.ExcellentType, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "form-control selectpicker", data_show_subtext = "true", data_live_search = "true", required = "true" })
            </div>
        </div>
        <div class="row">
            @Html.Label("ชื่อโครงการ: ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.UeProjectName, new { @class = "form-control", required = "true" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("วันที่รับ: ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.UeRecDateText, new { @class = "form-control datepicker" })
                </div>
            </div>
        </div>

    </div>
}

<script>
    $(".form-excellent").validate({
        errorPlacement: $.noop
    });

    $('.selectpicker').selectpicker();

    $('.datepicker').datetimepicker({
        format: 'DD/MM/YYYY',
        icons: {
            time: "fa fa-clock-o",
            date: "fa fa-calendar",
            up: "fa fa-chevron-up",
            down: "fa fa-chevron-down",
            previous: 'fa fa-chevron-left',
            next: 'fa fa-chevron-right',
            today: 'fa fa-screenshot',
            clear: 'fa fa-trash',
            close: 'fa fa-remove'
        }
    });
</script>