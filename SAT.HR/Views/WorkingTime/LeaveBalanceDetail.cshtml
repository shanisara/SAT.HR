@model SAT.HR.Models.EmployeeViewModel

@{
    ViewBag.Title = "LeaveBalanceDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-evaluation" }))
                {
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">alarm_on</i>
                        </div>
                        <h4 class="card-title">
                            <span>  สิทธิการลาประจำปี: </span>
                            @Html.HiddenFor(m => m.UserID)
                            <span class="text-primary">@Model.FullNameTh (@Model.IDCard)</span>
                        </h4>
                    </div>
                    <div class="card-body">
                        @*<div class="row" style="margin-left: 8px;">
                            <span>ปีบัญชี: </span>
                            <span style="width: 50px;"> @Model.CapYear</span>
                            <span>แบบประเมิน: @Model.EvaluationName</span>
                        </div>*@
                        <div class="toolbar pull-right">
                            <div class="col-sm-1">
                                @Html.DropDownList("LeaveYear", new SelectList((IEnumerable<SelectListItem>)ViewBag.YearLeaveBalance, "Value", "Text"), new { @class = "selectpicker usertype", data_style = "select-with-transition" })
                            </div>
                        </div>
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                                <thead class="text-primary">
                                    <tr>
                                        <th style="width:5%" class="disabled-sorting">ลำดับ</th>
                                        <th style="width:10%">ปีบัญชี</th>
                                        <th style="width:30%">ประเภท</th>
                                        <th style="width:15%;">วันลามาตรฐาน</th>
                                        <th style="width:15%;">วันลาได้สูงสุด</th>
                                        <th style="width:15%;">วันลาที่ใช้ไป</th>
                                        <th style="width:10%" class="disabled-sorting text-right">ปฏิบัติการ</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="ml-auto mr-auto">
                                <button type="button" class="btn btn-back">ย้อนกลับ</button>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .table > tbody > tr > td, .table > tbody > tr > th, .table > tfoot > tr > td, .table > tfoot > tr > th, .table > thead > tr > td, .table > thead > tr > th {
        vertical-align: top;
    }
    .bootstrap-select:not([class*=col-]):not([class*=form-control]):not(.input-group-btn) {
        width: 60px;
        margin-left: 13px;
        margin-top: -5px;
    }
</style>

@section Scripts {
    <script>

        $(document).ready(function () {


            $(".btn-back").click(function () {
                var url = '@Url.Action("LeaveBalance", "WorkingTime")';
                window.location.href = url;
            });
        });

    </script>
}