@section Scripts {
    <script>
        $(document).ready(function () {

            var dataTable = {
                table: null,
                initializeDataTable: function () {
                    $table = $('#datatables');

                    dataTable.table = $table.DataTable({
                        "proccessing": true,
                        "serverSide": true,
                        responsive: true,
                        language: {
                            search: "_INPUT_",
                            searchPlaceholder: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.searchPlaceholder)",
                        },
                        ajax: {
                            url: $table.data("url"),
                            type: "POST",
                        },
                        "columns": [
                            { "data": "RowNumber", "orderable": false, "searchable": false },
                            { "data": "LeaveYear", "orderable": true },
                            { "data": "LeaveNo", "orderable": true },
                            { "data": "LeaveTypeName", "orderable": true },
                            { "data": "RequestName", "orderable": true },
                            { "data": "CreateDateText", "orderable": true },
                            { "data": "StatusName", "orderable": false, "searchable": false  }
                        ],
                        "columnDefs": [
                            {
                                "render": function (data, type, row) {
                                    var inner = '<div class="td-actions text-right">' +
                                                    '<button type="button" rel="tooltip" class="btn btn-round btn-success edit" data-id="' + row.LeaveID + '"><i class="material-icons">edit</i></button>&nbsp;&nbsp;&nbsp;' +
                                                    '<button type="button" rel="tooltip" class="btn btn-round btn-danger cancel" data-id="' + row.LeaveID + '"><i class="material-icons">close</i></button>' +
                                                '</div>';
                                    return inner;
                                }, "targets": 7
                            },
                        ],
                        "order": [[1, "desc"]],
                        "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                        "pagingType": "full_numbers",
                    });


                    dataTable.table.on('click', '.edit', function () {
                        var id = $(this).data("id");
                        var url = '@Url.Action("LeaveRequestDetail", "WorkingTime")/' + id;
                        window.location.href = url;
                    });


                    dataTable.table.on('click', '.cancel', function () {
                        var id = $(this).data("id");
                        swal({
                            title: '',
                            text: "ยืนยันการยกเลิก",
                            type: 'question',
                            showCancelButton: true,
                            confirmButtonClass: 'btn btn-success',
                            cancelButtonClass: 'btn btn-danger',
                            confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnYes)',
                            cancelButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnNo)',
                            buttonsStyling: false
                        }).then(function () {
                            $.ajax({
                                type: 'POST',
                                url: '@Url.Action("CancelLeaveRequest", "WorkingTime")/' + id,
                                success: function (res) {
                                    if (res.MessageCode == null) {
                                        swal({
                                            title: "",
                                            text: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.DeleteSucceed)",
                                            type: "success",
                                            confirmButtonClass: "btn btn-primary",
                                            confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                                            buttonsStyling: false
                                        }).then(function () {
                                            dataTable.getData();
                                        });
                                    }
                                    else {
                                        swal({
                                            title: '',
                                            text: res.MessageText,
                                            type: 'error',
                                            confirmButtonClass: "btn btn-primary",
                                            confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnYes)',
                                            buttonsStyling: false
                                        }).catch(swal.noop);
                                    }
                                }
                            });
                        }).catch(swal.noop)
                    });

                },
                getData: function () {
                    if (dataTable.table == null)
                        dataTable.initializeDataTable();
                    else
                        dataTable.table.ajax.reload();
                }
            }

            //dataTable.getData();


            $(".btn-add").click(function () {
                var userid = $("#UserID").val();
                var url = '@Url.Action("LeaveRequestDetail", "WorkingTime")';
                window.location.href = url;

                @*var url = '@Url.Action("LeaveRequestDetail", "WorkingTime")';
                $.post(url, function (data) {
                    $(".div-detail").html(data);
                    $('.modal-detail').modal('show');
                });*@
            });


            $(".btn-save").click(function () {
            var $valid = $('.form-detail').valid();
            if (!$valid) {

                return false;
            }
            else {
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("SaveLeaveRequest", "WorkingTime")',
                    data: $(".form-detail").serialize(),
                    success: function (res) {
                        if (res.MessageCode == null) {
                            swal({
                                title: "",
                                text: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.SaveSucceed)",
                                type: "success",
                                buttonsStyling: false,
                                confirmButtonClass: "btn btn-primary",
                                confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                            }).then(function () {
                                $('.modal-detail').modal('hide');
                                dataTable.getData();
                            });
                        }
                        else {
                            swal({
                                title: '',
                                text: res.MessageText,
                                type: 'error',
                                confirmButtonClass: "btn btn-primary",
                                confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnYes)',
                                buttonsStyling: false
                            }).catch(swal.noop)
                        }
                    }
                });
            }
        });

        $(".btn-back").click(function () {
            var url = '@Url.Action("LeaveRequest", "WorkingTime")';
            window.location.href = url;
        });

    });
</script>
}
