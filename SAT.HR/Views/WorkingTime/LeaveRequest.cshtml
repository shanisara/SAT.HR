@model SAT.HR.Models.LeaveRequestViewModel

@{
    ViewBag.Title = "LeaveRequest";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header card-header-primary card-header-icon">
                    <div class="card-icon">
                        <i class="material-icons">alarm_on</i>
                    </div>
                    <h4 class="card-title">
                        <span>รายการใบลา </span><small> </small>
                    </h4>
                    <div class="form-horizontal">
                        <div class="row pull-right" style="margin-right: 10px; margin-top: -25px;">
                            <div style="width:80px">
                                @Html.DropDownList("LeaveYear", new SelectList((IEnumerable<SelectListItem>)ViewBag.LeaveYear, "Value", "Text"), new { @class = "selectpicker usertype", data_style = "select-with-transition" })
                            </div>&nbsp;&nbsp;&nbsp;&nbsp;
                            <div style="width:105px">
                                @Html.DropDownList("LeaveStatus", new SelectList((IEnumerable<SelectListItem>)ViewBag.LeaveStatus, "Value", "Text"), new { @class = "selectpicker userstatus", data_style = "select-with-transition" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="toolbar pull-right">
                        <button class="btn btn-primary btn-sm btn-add" data-toggle="modal"><i class="material-icons">add</i> สร้างใบลา</button>
                    </div>
                    <div class="material-datatables">
                        <table id="datatables" data-url="@Url.Content("~/Employee/LeaveRequest")" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                            <thead>
                                <tr>
                                    <th style="width:5%" class="disabled-sorting">ลำดับ</th>
                                    <th style="width:10%">ปี</th>
                                    <th style="width:10%">เลขที่</th>
                                    <th style="width:15%">ประเภท</th>
                                    <th style="width:20%">ชื่อ-นามสกุล</th>
                                    <th style="width:10%">วันที่ทำรายการ</th>
                                    <th style="width:20%">สถานะ</th>
                                    <th style="width:10%" class="disabled-sorting text-right">ปฏิบัติการ</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

