@model SAT.HR.Models.IndividualPlanViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-detail" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserID)
    @Html.HiddenFor(m => m.PlanID)

    <div class="form-horizontal">
        <div class="row">
            <label class="col-sm-3 col-form-label">ชื่อแผน<span class="text-danger"> *</span></label>
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.PlanName, new { @class = "form-control", required = "true" })
                </div>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-3 col-form-label">รายละเอียด<span class="text-danger"> *</span></label>
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextAreaFor(m => m.PlanDesc,3,100, new { @class = "form-control", required = "true" })
                </div>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-3 col-form-label">วันเริ่ม<span class="text-danger"> *</span></label>
            <div class="col-sm-3">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.StartDate, "{0:dd-MM-yyyy}", new { @class = "form-control datepicker", required = "true" })
                </div>
            </div>
            <label class="col-sm-3 col-form-label">วันสิ้นสุด<span class="text-danger"> *</span></label>
            <div class="col-sm-3">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.EndDate, "{0:dd-MM-yyyy}", new { @class = "form-control datepicker", required = "true" })
                </div>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-3 col-form-label">จำนวนเงิน<span class="text-danger"> *</span></label>
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.Amount, new { @class = "form-control", type = "number", required = "true" })
                </div>
            </div>
        </div>
    </div>
}
<script>

    $('.selectpicker').selectpicker();

    $('.datepicker').datetimepicker({
        format: 'DD/MM/YYYY',
        locale: 'th',
        date: moment().add(543, 'years'),
        icons: {
            time: "fa fa-clock-o",
            date: "fa fa-calendar",
            up: "fa fa-chevron-up",
            down: "fa fa-chevron-down",
            previous: 'fa fa-chevron-left',
            next: 'fa fa-chevron-right',
            today: 'fa fa-screenshot',
            clear: 'fa fa-trash',
            close: 'fa fa-remove'
        }
    });
</script>
