@model SAT.HR.Models.DepartmentViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formDetail" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.DepID)
    @*@Html.HiddenFor(m => m.DivID)*@

    <div class="col-md-12">

        <div class="row">            
                @Html.Label("กอง", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    <label class="bmd-label-floating">ใส่ข้อมูลกอง</label>
                    @Html.TextBoxFor(m => m.DepName, new { @class = "form-control", required = "true" })
                    @Html.ValidationMessageFor(m => m.DepName)
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-3">
                @Html.Label("ฝ่าย", null, new { @class = "bmd-label-floating" })
            </div>
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.DropDownListFor(n => n.DivID, new SelectList((IEnumerable<SelectListItem>)ViewBag.Division, "Value", "Text"), "  -- กรุณาเลือก / Please choose --", new { @class = "form-control", required = "true" })
                    @Html.ValidationMessageFor(m => m.DivID)
                </div>
            </div>
        </div>        

        <div class="form-check">
            @Html.Label("สถานะ", null, new { @class = "col-sm-2 col-form-label label-checkbox" })
            <div class="col-sm-10">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" value="" checked="">
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                    </label>
                </div>
            </div>
        </div>

        

    </div>
}