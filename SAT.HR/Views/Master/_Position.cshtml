@model SAT.HR.Models.PositionViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formDetail" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.PoID)

    <div class="col-md-12">
        <div class="row">
            @Html.Label("รหัส", null, new { @class = "col-sm-2 col-form-label" })   
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    <label class="bmd-label-floating">ใส่ข้อมูลรหัส</label>
                    @Html.TextBoxFor(m => m.PoCode, new { @class = "form-control", required = "true" })
                    @Html.ValidationMessageFor(m => m.PoCode)
                </div>
            </div> 
        </div>
        <div class="row">
            @Html.Label("ตำแหน่ง", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    <label class="bmd-label-floating">ใส่ข้อมูลตำแหน่ง</label>
                    @Html.TextBoxFor(m => m.PoName, new { @class = "form-control", required = "true" })
                    @Html.ValidationMessageFor(m => m.PoName)
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("สถานะ", null, new { @class = "col-sm-2 col-form-label label-checkbox" })
            <div class="col-sm-10">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" value="" checked="">
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                        @*@Html.CheckBoxFor(m => m.DivStatus.Value)
                            @Html.ValidationMessageFor(m => m.DivStatus)*@
                    </label>
                </div>
            </div>
        </div>
    </div>
}