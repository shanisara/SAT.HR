@model List<SAT.HR.Models.RoleMenuViewModel>

<style>
    .table thead tr th {
        font-size: 14px;
    }
</style>


    <table id="tb-menu" class="table table-hover" cellspacing="0" cellpadding="0" style="width:100%">
        <thead class="text-primary">
            <tr class="td-font-size">
                <th style="width:10%" class="text-center">ลำดับ</th>
                <th style="width:70%" class="text-left">เมนู</th>
                <th style="width:5%" class="text-center">แสดง</th>
                <th style="width:5%" class="text-center">เพิ่ม</th>
                <th style="width:5%" class="text-center">แก้ไข</th>
                <th style="width:5%" class="text-center">ลบ</th>
                @*<th style="width:5%" class="td-font-size">ดาวน์โหลด</th>
                <th style="width:5%" class="td-font-size">อัพโหลด</th>*@
            </tr>
        </thead>
        <tbody>
            @{ int index = 1; }
            @foreach (var item in Model.Where(x => x.ParentID == 0))
            {
                <tr class="table-warning">
                    <td colspan="6">@item.MenuName</td>
                </tr>

                foreach (var item2 in Model.Where(x => x.ParentID == @item.MenuID))
                {
                    string parentid = (@item2.ParentID == 0) ? "" : "";
                    string _view = @item2.R_View == true ? "checked" : "";
                    string _add = @item2.R_Add == true ? "checked" : "";
                    string _edit = @item2.R_Edit == true ? "checked" : "";
                    string _delete = @item2.R_Delete == true ? "checked" : "";

                    <tr data-type-name="T" data-menu-id="@item2.MenuID" data-role-id="@item2.RoleID" data-parent-id="@item2.ParentID">
                        <td class="text-center">@index</td>
                        <td>@item2.MenuName</td>
                        <td class="text-center">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input r_view" type="checkbox">
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                        </td>
                        <td class="text-center">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input r_add" type="checkbox" @_add>
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                        </td>
                        <td class="text-center">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input r_edit" type="checkbox" @_edit>
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                        </td>
                        <td class="text-center">
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input r_delete" type="checkbox" @_delete>
                                    <span class="form-check-sign">
                                        <span class="check"></span>
                                    </span>
                                </label>
                            </div>
                        </td>
                    </tr>
                    ++index;
                }
                index = 1;
            }
        </tbody>
    </table>
    <div class="card-footer text-right">
        <div class="form-check mr-auto"></div>
        <button type="button" class="btn btn-Back">ย้อนกลับ<div class="ripple-container"></div></button>&nbsp;&nbsp;&nbsp;
        <button type="button" class="btn btn-primary btn-save">บันทึก<div class="ripple-container"></div></button>
    </div>
