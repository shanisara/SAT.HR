
@{
    ViewBag.Title = "Position";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .modal-dialog-position {
        max-width: 850px;
    }
    .bootstrap-select:not([class*=col-]):not([class*=form-control]):not(.input-group-btn) {
        width: 125px;
        /*margin-left: 13px;
        margin-top: -5px;*/
    }

    .card [class*=card-header-] .card-title a {
        color: #3C4858;
    }

        .card [class*=card-header-] .card-title a:hover {
            color: #fff;
        }
    .col-form-label {
        font-size: 14px;
    }
    .label-select {
        font-size: 14px;
    }
</style>

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">settings_applications</i>
                        </div>
                        <h4 class="card-title">
                            <span>รายการตำแหน่ง</span>
                            <div class="pull-right">
                                @Html.DropDownList("usertype", new SelectList((IEnumerable<SelectListItem>)ViewBag.UserType, "Value", "Text"), new { @class = "selectpicker", data_style = "select-with-transition" })
                            </div>
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="toolbar pull-right">
                            <button class="btn btn-primary btn-sm" data-toggle="modal" id="btnAdd"><i class="material-icons">add</i> เพิ่มตำแหน่ง</button>
                        </div>
                        <div class="material-datatables">
                            <table id="datatables" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:100%">
                                <thead>
                                    <tr>
                                        <th style="width:10%">ลำดับ</th>
                                        <th style="width:15%">รหัส</th>
                                        <th style="width:55%">ตำแหน่ง</th>
                                        <th style="width:10%">สถานะ</th>
                                        <th style="width:10%" class="disabled-sorting text-right">ปฏิบัติการ</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <!-- end content -->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
        <!-- end row -->
    </div>
</div>

<!-- Classic Modal -->
<div class="modal fade modal-large" id="modalDetail" tabindex="-1" role="dialog" aria-labelledby="modalDetailLabel" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-position"">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span>ข้อมูลตำแหน่ง</span></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="material-icons">clear</i>
                </button>
            </div>
            <div class="modal-body">
                <div class="content">
                    <div class="container-fluid">
                        <div id="detail"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-default" data-dismiss="modal">@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)</button>&nbsp;&nbsp;&nbsp;
                <button type="button" class="btn btn-sm btn-primary" id="btnSave">@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnSave)</button>
            </div>
        </div>
    </div>
</div>
<!--  End Modal -->

@section Scripts {
    <script>
        $(document).ready(function () {

            var dataTable = {
                table: null,
                initializeDataTable: function () {
                    var type = $('#usertype').val();

                    $table = $('#datatables');
                    dataTable.table = $table.DataTable({
                        "proccessing": true,
                        "serverSide": true,
                        responsive: true,
                        language: {
                            search: "_INPUT_",
                            searchPlaceholder: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.searchPlaceholder)",
                        },
                        ajax: {
                            url: '@Url.Action("Position", "Master")/' +"?type="+ type,
                            type: "POST",
                        },
                        "columns": [
                            { "data": "RowNumber", "orderable": true },
                            { "data": "PoCode", "orderable": true },
                            { "data": "PoName", "orderable": true },
                            { "data": "Status", "orderable": true }
                        ],
                        "columnDefs": [
                            {
                                "render": function (data, type, row) {
                                    var inner = '<div class="td-actions text-right">' +
                                        '<button type="button" rel="tooltip" class="btn btn-round btn-success edit" data-id="' + row.PoID + '"><i class="material-icons">edit</i></button>&nbsp;&nbsp;&nbsp;' +
                                        '<button type="button" rel="tooltip" class="btn btn-round btn-danger delete" data-id="' + row.PoID + '"><i class="material-icons">close</i></button>' +
                                        '</div>';
                                    return inner;
                                }, "targets": 4
                            },
                        ],
                        "order": [[1, "asc"]],
                        "lengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
                        "pagingType": "full_numbers",
                    });


                    dataTable.table.on('click', '.edit', function () {
                        var id = $(this)[0].dataset["id"];
                        var type = $('#usertype').val();
                        var url = '@Url.Action("PositionDetail", "Master")/' + id + "?type=" + type;
                        $.post(url, function (data) {
                            $("#detail").html(data);
                            $('#modalDetail').modal('show');
                        });
                    });

                    dataTable.table.on('click', '.delete', function () {
                        var id = $(this)[0].dataset["id"];
                        showSwal.confirmDeleteMessage(id);
                    });

                },
                getData: function () {
                    if (dataTable.table == null)
                        dataTable.initializeDataTable();
                    else
                        dataTable.table.ajax.reload();
                },
                renewData: function () {
                    $('#datatables').dataTable().fnDestroy();
                    dataTable.initializeDataTable();
                }
            }

            dataTable.getData();


            var showSwal = {
                saveMessage: function () {
                    swal({
                        title: "",
                        text: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.SaveSucceed)",
                        type: "success",
                        buttonsStyling: false,
                        confirmButtonClass: "btn btn-success",
                        confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                    }).catch(swal.noop)
                },
                deleteMessage: function () {
                    swal({
                        title: '',
                        text: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.DeleteSucceed)',
                        type: 'success',
                        confirmButtonClass: "btn btn-success",
                        confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                        buttonsStyling: false
                    }).catch(swal.noop)
                },
                confirmDeleteMessage: function (id) {
                    swal({
                        title: '',
                        text: "@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.ConfirmDelete)",
                        type: 'question',
                        showCancelButton: true,
                        confirmButtonClass: 'btn btn-success',
                        cancelButtonClass: 'btn btn-danger',
                        confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnYes)',
                        cancelButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnNo)',
                        buttonsStyling: false
                    }).then(function () {
                        var url = '@Url.Action("DeletePosition", "Master")/' + id;
                        $.ajax({
                            type: 'POST',
                            url: url,
                            success: function (res) {
                                if (res.MessageCode == null) {
                                    showSwal.deleteMessage();
                                    dataTable.getData();
                                }
                                else {
                                    alert(res.MessageText);
                                }
                            }
                        });
                    }).catch(swal.noop)
                }
            }


            // Add record
            $("#btnAdd").click(function () {
                var type = $('#usertype').val();
                var url = '@Url.Action("PositionDetail", "Master")' + "?type=" + type;
                $.post(url, function (data) {
                    $("#detail").html(data);
                    $('#modalDetail').modal('show');
                });
            });

            // Save record
            $("#btnSave").click(function () {
                if ($('#PoCode').val() == "") {
                    $('#PoCode').focus();
                }
                else if ($('#PoName').val() == "") {
                    $('#PoName').focus();
                }
                else {
                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("SavePosition", "Master")',
                        data: $("#formDetail").serialize(),
                        dataType: 'json',
                        success: function (res) {
                            if (res.MessageCode == null) {
                                showSwal.saveMessage();
                                dataTable.getData();
                                $('#modalDetail').modal('hide');
                            }
                            else {
                                alert(res.MessageText);
                            }
                        }
                    });
                }
            });

            $('#usertype').change(function () {
                dataTable.renewData();
            });

        });
    </script>
}