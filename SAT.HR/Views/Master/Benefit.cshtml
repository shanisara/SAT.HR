@model List<SAT.HR.Models.BenefitDocViewModel>

@{
    ViewBag.Title = "Benefit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <div class="card-icon">
                            <i class="material-icons">cloud_upload</i>
                        </div>
                        <h4 class="card-title"><span>อัพโหลด > </span><small>เอกสารสวัสดิการ</small></h4>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <button class="btn btn-primary btn-sm pull-right" data-toggle="modal" id="btnAdd"><i class="material-icons">add</i> เพิ่ม</button>
                        </div>
                        <div class="table-responsive">
                            <table id="datatables" class="table">
                                <thead>
                                    <tr>
                                        <th colspan="2" style="width:70%">ชื่อเอกสาร</th>
                                        <th style="width:12%">วันที่อัพโหลด</th>
                                        <th style="width:8%">ไฟล์แนบ</th>
                                        <th style="width:10%" class="disabled-sorting text-right">ปฏิบัติการ</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @for (int i = 0; i < Model.Count(); i++)
                                    {
                                        <tr>
                                            <td class="text-center">&#9679;</td>
                                            <td>@Model[i].BdDocName</td>
                                            <td>@Convert.ToDateTime(Model[i].ModifyDate).ToString("dd/MM/yyyy")</td>
                                            <td><a href="@Url.Action("DownloadBenefit", "Master", new { id = Model[i].BdID })">ไฟล์แนบ</a></td>
                                            <td>
                                                <div class="td-actions text-right">
                                                    <button type="button" rel="tooltip" class="btn btn-round btn-success edit" data-id="+@Model[i].BdID+"><i class="material-icons">edit</i></button>&nbsp;
                                                    <button type="button" rel="tooltip" class="btn btn-round btn-danger delete" data-id="+@Model[i].BdID+"><i class="material-icons">close</i></button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Classic Modal -->
<div class="modal fade modal-large" id="modalDetail" tabindex="-1" role="dialog" aria-labelledby="modalDetailLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-detail">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"><span>อัพโหลดเอกสารสวัสดิการ</span></h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                    <i class="material-icons">clear</i>
                </button>
            </div>
            <div class="modal-body">
                <div class="content">
                    <div class="container-fluid">
                        <div id="detail"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)</button>&nbsp;&nbsp;&nbsp;
                <button type="button" class="btn btn-primary" id="btnSave">@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnSave)</button>
            </div>
        </div>
    </div>
</div>
<!--  End Modal -->


@section Scripts {
    <script>
        $(document).ready(function () {

            $("#datatables").on('click', '.btn-edit', function () {
                debugger;
                var id = $(this)[0].dataset["id"];
                var url = '@Url.Action("BenefitDetail", "Master")/'+ id;
                $.post(url, function (data) {
                    $("#detail").html(data);
                    $('#modalDetail').modal('show');
                });
            });

            $("#btnAdd").click(function () {
                var url = '@Url.Action("BenefitDetail", "Master")';
                $.post(url, function (data) {
                    $("#detail").html(data);
                    $('#modalDetail').modal('show');
                });
            });

            $("#btnSave").click(function () {
                var $valid = $('#formDetail').valid();
                if (!$valid) {
                    return false;
                }
                else {
                    var form = $('#formDetail')[0];
                    var data = new FormData(form);
                    data.append(".fileUpload", fileUpload);

                    $.ajax({
                        type: 'POST',
                        url: '@Url.Action("SaveBenefit", "Master")',
                        data: data,
                        enctype: 'multipart/form-data',
                        processData: false,
                        contentType: false,
                        cache: false,
                        success: function (res) {
                            if (res.MessageCode == null) {
                                showSwal.saveMessage();
                                dataTable.getData();
                                $('#modalDetail').modal('hide');
                            }
                            else {
                                alert(res.MessageText);
                            }
                        }
                    });
                }
            });


        });
</script>
}




