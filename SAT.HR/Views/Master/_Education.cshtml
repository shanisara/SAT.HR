@model SAT.HR.Models.EducationViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formDetail" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.EduID)
    @Html.Hidden("Status")

    <div class="col-md-12">
        <div class="row">
            @Html.Label("รหัส", null, new { @class = "col-sm-4 col-form-label" })
            <div class="col-sm-8">
                <div class="form-group bmd-form-group">
                    <label class="bmd-label-floating">ใส่ข้อมูลรหัส</label>
                    @Html.TextBoxFor(m => m.EduCode, new { @class = "form-control", required = "true", @type = "number" })
                    @Html.ValidationMessageFor(m => m.EduCode)
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("ระดับการศึกษา", null, new { @class = "col-sm-4 col-form-label" })
            <div class="col-sm-8">
                <div class="form-group bmd-form-group">
                    <label class="bmd-label-floating">ใส่ข้อมูลระดับการศึกษา</label>
                    @Html.TextBoxFor(m => m.EduName, new { @class = "form-control", required = "true" })
                    @Html.ValidationMessageFor(m => m.EduName)
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("สถานะ", null, new { @class = "col-sm-4 col-form-label label-checkbox" })
            <div class="col-sm-8">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input checkbox" type="checkbox">
                        <span class="form-check-sign" style="top:0px"><span class="check"></span></span>
                    </label>
                </div>
            </div>
        </div>
    </div>
}
<script>
    $(document).ready(function () {

        if ('@Model.EduStatus' == 'True') {
            $(".checkbox").prop("checked", true);
        }

        $(".checkbox").click(function () {
            var checked = $(this).is(':checked');
            if (checked) {
                $('#Status').val('1');
            }
            else {
                $('#Status').val('0');
            }
        });
    });
</script>
