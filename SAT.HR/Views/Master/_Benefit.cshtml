@model SAT.HR.Models.BenefitDocViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formDetail" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.BdID)
    @Html.HiddenFor(m => m.BdDocPath)

    <div class="col-md-12">
        <div class="row">
            @Html.Label("ชื่อไฟล์: ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.BdDocName, new { @class = "form-control" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("ไฟล์แนบ: ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10" style="margin-top:5px;">
                <div class="input-group-prepend file-path">
                    <a style="margin-top:15px;" class="file-name" target="_blank" href="@Url.Action("DownloadBenefit", "Master", new { id = Model.BdID })">@Model.BdDocPath</a>
                    <a class="btn btn-link btn-danger btn-just-icon file-delete" file-delete href="#" title="ลบ"><i class="material-icons">delete_forever</i></a>
                </div>
                <input id="fileUpload" name="fileUpload" type="file" class="form-control file-upload">
            </div>
        </div>
    </div>
}

<script>

    if ('@Model.BdDocPath' != '') {
        $(".file-path").show();
        $(".file-upload").hide();
    }
    else {
        $(".file-path").hide();
        $(".file-upload").show();
    }

    $(".file-delete").click(function () {
        $("#BdDocPath").val('');
        $(".file-upload").val('');
        $(".file-upload").show();
        $(".file-path").hide();
    });



</script>