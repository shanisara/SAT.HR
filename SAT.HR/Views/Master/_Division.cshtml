@model SAT.HR.Models.DivisionViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formDetail" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.DivID)

    <div class="col-md-12">
        <div class="row">
            @Html.Label("ฝ่าย", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.DivName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.DivName)
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("สถานะ", null, new { @class = "col-sm-2 col-form-label label-checkbox" })
            <div class="col-sm-10">
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" value="" checked="">
                        <span class="form-check-sign">
                            <span class="check"></span>
                        </span>
                        @*@Html.CheckBoxFor(m => m.DivStatus.Value)
                        @Html.ValidationMessageFor(m => m.DivStatus)*@
                    </label>
                </div>
            </div>
        </div>
    </div>
}
