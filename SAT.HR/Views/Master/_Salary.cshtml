@model SAT.HR.Models.SalaryViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formDetail" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.SaID)

    <div class="col-md-12">
        <div class="row">
            @Html.Label("ระดับ", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.SaLevel, new { @class = "form-control text-right" })
                    @Html.ValidationMessageFor(m => m.SaLevel)
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("ขั้น", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.SaStep, new { @class = "form-control text-right" })
                    @Html.ValidationMessageFor(m => m.SaStep)
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("เงินเดือน", null, new { @class = "col-sm-3 col-form-label" })
            <div class="col-sm-9">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.SaRate, new { @class = "form-control text-right" })
                    @Html.ValidationMessageFor(m => m.SaRate)
                </div>
            </div>
        </div>
    </div>
}