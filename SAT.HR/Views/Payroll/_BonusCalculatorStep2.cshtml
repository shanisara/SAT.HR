@model List<SAT.HR.Models.EmpBonusCalculatorViewModel>

<div class="card">
    <div class="card-header">
        <h4 class="card-title"><span>ตรวจสอบและแก้ไข</span></h4>
        <p class="card-category"> รายการคำนวณโบนัสประจำปี </p>
        <div class="toolbar pull-right" style="margin-top: -50px;">
            <button class="btn btn-primary btn-sm btn-export" data-toggle="modal">Export</button>
        </div>
    </div>
    <div class="card-body">
        <div class="level-transfer">
            <table id="datatables" data-url="@Url.Content("~/payroll/BonusCalculator")" class="table table-striped table-no-bordered table-hover" cellspacing="0" style="width:1500px; height:500px">
                <thead>
                    <tr>
                        <th style="width:60px" class="disabled-sorting">ลำดับ</th>
                        <th style="width:75px">ปีบัญชี</th>
                        <th style="width:200px">ชื่อ นามสกุล</th>
                        <th style="width:100px">เงินเดือน</th>
                        <th style="width:75px">อัตรา</th>
                        <th style="width:100px">โบนัส</th>
                        <th style="width:10%" class="disabled-sorting text-right">ปฏิบัติการ</th>
                        <th>m10</th>
                        <th>m11</th>
                        <th>m12</th>
                        <th>m1</th>
                        <th>m2</th>
                        <th>m3</th>
                        <th>m4</th>
                        <th>m5</th>
                        <th>m6</th>
                        <th>m7</th>
                        <th>m8</th>
                        <th>m9</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        for (int i = 0; i < Model.Count; i++)
                        {
                            <tr data-user="@Model[i].UserID">
                                <td>@(i + 1)</td>
                                <td>@Model[i].Year</td>
                                <td>@Model[i].FullNameTh</td>
                                <td>@Model[i].Salary</td>
                                <td>@Model[i].UpStep</td>
                                <td>@Model[i].Bonus</td>
                                <td>
                                    <div class="td-actions pull-right">
                                        <button title="ลบ" type="button" rel="tooltip" class="btn btn-round btn-success edit" data-id="@Model[i].UserID"><i class="material-icons">edit</i></button>
                                    </div>
                                </td>
                                <td>@Model[i].M10</td>
                                <td>@Model[i].M11</td>
                                <td>@Model[i].M12</td>
                                <td>@Model[i].M1</td>
                                <td>@Model[i].M2</td>
                                <td>@Model[i].M3</td>
                                <td>@Model[i].M4</td>
                                <td>@Model[i].M5</td>
                                <td>@Model[i].M6</td>
                                <td>@Model[i].M7</td>
                                <td>@Model[i].M8</td>
                                <td>@Model[i].M9</td>
                                
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
