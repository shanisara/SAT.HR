        function BonusCalculatorStep2() {
            var year = parseInt($('#Year').val());
            var step = parseFloat($('#Rate').val());
            var url = '@Url.Action("BonusCalculatorStep2", "Payroll")?year=' + year + '&step=' + step;
            $("#div-step2").load(url);
        }

        function BonusCalculatorProcess() {
            var form = $(".form-step")[0];
            var formData = new FormData(form);
            formData.append(".FileUpload", FileUpload);
            $.ajax({
                type: 'POST',
                url: '@Url.Action("BonusCalculatorConfirm", "Payroll")',
                data: formData,
                dataType: 'json',
                enctype: 'multipart/form-data',
                processData: false,
                contentType: false,
                success: function (res) {
                    swal({
                        title: "",
                        text: "ประมวลผลโบนัสเรียบร้อยแล้ว",
                        type: "success",
                        confirmButtonClass: "btn btn-primary",
                        confirmButtonText: '@MvcHtmlString.Create(SAT.HR.Resources.ResourceSAT.btnClose)',
                        buttonsStyling: false,
                    }).then(function () {
                        window.location.href = '@Url.Action("BonusCalculator", "Payroll")';
                    });
                }
            });
        }

        $(".btn-export").click(function () {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("ExportBonusCalculatorToExcel", "Payroll")',
                data: $(".form-step").serialize(),
                success: function (res) {
                    window.location = '/Payroll/Download?fileGuid=' + res.FileGuid + '&filename=' + res.FileName;
                }
            });
        });

    });

    </script>

    <script>
    $(document).ready(function () {

        var $validator = $('.card-wizard form').validate({
            //rules: {
