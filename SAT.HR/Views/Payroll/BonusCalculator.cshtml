        function step3() {
            $(".btn-export").css("display", "none");

            $('.li-step2').find('a').removeClass('active');
            $('.div-step2').removeClass('active');

            $('.li-step3').find('a').addClass('active').removeClass('disabled');
            $('.div-step3').addClass('active');

