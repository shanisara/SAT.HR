@model SAT.HR.Models.BenefitRemunerationViewModel

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-detail" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.UserID)
    @Html.HiddenFor(m => m.BrID)

    <div class="form-horizontal">
        <div class="row">
            <label class="col-sm-2 col-form-label" for="BrYear">ปีบัญชี<span class="text-danger"> *</span></label>
            <div class="col-sm-3">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.BrYear, new { @class = "form-control", type = "number", required = "true" })
                </div>
            </div>
        </div>
        <div class="row">
            <label class="col-sm-2 col-form-label" for="RecID">ผู้รับ<span class="text-danger"> *</span></label>
            <div class="col-sm-3">
                @Html.DropDownListFor(x => x.RecID, new SelectList((IEnumerable<SelectListItem>)ViewBag.RecieveType, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "selectpicker", data_style = "select-with-transition", required = "true" })
            </div>
            <label class="col-sm-2 col-form-label" for="RecFullName">ชื่อ-สกุล<span class="text-danger"> *</span></label>
            @Html.Label("", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-5">
                @Html.DropDownListFor(x => x.RecFullName, new SelectList((IEnumerable<SelectListItem>)ViewBag.RecFullName, "Value", "Text"), "-- กรุณาเลือก --", new { @class = "selectpicker", data_style = "select-with-transition", required = "true" })
            </div>
        </div>
        <div class="row m-t-10">
            <label class="col-sm-2 col-form-label" for="BrDate">วันที่เริ่ม<span class="text-danger"> *</span></label>
            <div class="col-sm-3">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.BrDate, "{0:dd-MM-yyyy}", new { @class = "form-control datepicker", required = "true" })
                </div>
            </div>
            <label class="col-sm-2 col-form-label" for="BrDate">วันที่สิ้นสุด<span class="text-danger"> *</span></label>
            <div class="col-sm-5">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.BrEndDate, "{0:dd-MM-yyyy}", new { @class = "form-control datepicker", required = "true" })
                </div>
            </div>
        </div>
        <div class="row m-t-5">
            <label class="col-sm-2 col-form-label" for="BrAmout">จำนวนเงิน<span class="text-danger"> *</span></label>
            <div class="col-sm-10">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.BrAmout, new { @class = "form-control", type = "number", required = "true" })
                </div>
            </div>
        </div>
        <div class="row">
            @Html.Label("หมายเหตุ", null, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <div class="form-group bmd-form-group">
                    @Html.TextBoxFor(m => m.BrRemark, new { @class = "form-control" })
                </div>
            </div>
        </div>
    </div>
}
<script>

    if ('@Model.RecFullName' != '') {
        $('select[name=RecFullName]').val('@Model.RecFullName');
        $('select[name=RecFullName]').selectpicker('refresh');
    }

    $('.selectpicker').selectpicker();

    $('.datepicker').datetimepicker({
        format: 'DD/MM/YYYY',
        locale: 'th',
        //date: moment().add(543, 'years'),
        icons: {
            time: "fa fa-clock-o",
            date: "fa fa-calendar",
            up: "fa fa-chevron-up",
            down: "fa fa-chevron-down",
            previous: 'fa fa-chevron-left',
            next: 'fa fa-chevron-right',
            today: 'fa fa-screenshot',
            clear: 'fa fa-trash',
            close: 'fa fa-remove'
        }
    });

    $('select[name=RecID]').change(function () {
        var recid = $('select[name=RecID]').val();
        var userid = $("#UserID").val();
        $.ajax({
            type: 'POST',
            url: '@Url.Action("GetUserFamilyByRec", "Employee")',
            data: { recid: recid, userid: userid },
            dataType: 'json',
            success: function (res) {
                if (recid == '1' || recid == '2' || recid == '3') {
                    $('select[name=RecFullName]').empty().append('<option value=' + res[0].UfName + '>' + res[0].UfName + '</option>');
                }
                else {
                    $('select[name=RecFullName]').empty().append('<option value=""> -- กรุณาเลือก -- </option>');
                    $.each(res, function (key, entry) {
                        $('select[name=RecFullName]').append($('<option>', { value: entry.UfName, text: entry.UfName }));
                    });
                }
                $('select[name=RecFullName]').selectpicker('refresh');
            }
        });
    });

</script>